<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_close"
                android:layout_width="wrap_content"
                android:text="Close"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/mulishbold"
                android:layout_height="wrap_content"/>



            <TextView
android:id="@+id/txt_header"
                android:layout_width="wrap_content"
                android:text="Add Medicine"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/mulishbold"
                android:layout_height="wrap_content"/>


        </RelativeLayout>




    </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:background="@drawable/bg_green_light_button"
android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:gravity="center"

                    android:id="@+id/textMedicines_Add"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_green_button"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:src="@drawable/valute" />
                </LinearLayout>
                <TextView
                    android:id="@+id/imgAdd1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Add Medicine"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="13dp"
                    android:textStyle="bold"/>

            </LinearLayout>





        <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:background="@drawable/bg_green_light_button"

android:layout_gravity="center"
        android:gravity="center"
       android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_add_medicine"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
           android:layout_marginTop="0dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:src="@drawable/thumb"/>



        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"

                    android:gravity="end"
android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:background="@drawable/bg_green_button"
                        android:layout_margin="@dimen/size3"
                        android:id="@+id/lay_edit"

                        android:layout_height="23dp">
                        <TextView
                            android:id="@+id/imgAdd"
                            android:layout_width="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:textColor="#FFFFFF"
                            android:padding="3dp"

                            style="@style/TextStyle.mulishsemibold"
                            android:text="Add Photo"
                            android:gravity="center"
                            android:textSize="12dp"

                            android:layout_height="wrap_content"

                            />
                    </LinearLayout>

                </LinearLayout>


             <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"

                    android:gravity="start"
android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_width="55dp"
                        android:background="@drawable/bg_pink_button"
                        android:layout_margin="@dimen/size3"
                        android:id="@+id/lay_delete"

                        android:layout_height="23dp">

                        <TextView
                            android:id="@+id/imgMedicineDelete"
                            android:layout_width="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:textColor="#FFFFFF"
                            android:padding="3dp"

                            style="@style/TextStyle.mulishsemibold"
                            android:text="Delete"
                            android:gravity="center"
                            android:textSize="12dp"

                            android:layout_height="wrap_content"

                            />

                    </LinearLayout>
             </LinearLayout>



        </LinearLayout>
    </LinearLayout>





        </LinearLayout>





    <LinearLayout
        android:id="@+id/layoutEdit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp">


        <AutoCompleteTextView
            android:id="@+id/edtText_NameMedicine"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/medicine_name"
            android:fontFamily="@font/mulishbold"

            android:layout_marginRight="@dimen/size15"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/size15"
            android:background="@drawable/bg_border_grey"
            android:layout_toLeftOf="@+id/img_upload_medicine"
            android:layout_alignParentStart="true"
            android:inputType="textPersonName"
            android:maxLength="70"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutShare"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.shamrock.reework.util.MultiSelectionSpinner
            android:id="@+id/spinnerAddMedicine_Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/custom_spinner_bg_calender" />

        <TextView
            android:id="@+id/text_time_acrtivty12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/mulishbold"

            android:layout_marginRight="@dimen/size15"
            android:padding="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/size15"
            android:background="@drawable/bg_border_grey"
android:drawableRight="@drawable/custom_spinner_bg_calender"
            android:text="Days"
             />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUpload"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size15"

            android:background="@drawable/bg_border_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub Activity Type"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner

                style="@style/MySpinnerNew"

                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:spinnerMode="dialog"
                android:id="@+id/spinnerAddMedicine_Frequency"


                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPrint"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="8dp">


        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size15"

            android:background="@drawable/bg_border_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub Activity Type"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceSmall" />



            <TextView
                android:id="@+id/txt_time1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select Time"
                android:gravity="center|start"
                android:visibility="visible"
                android:paddingLeft="10dp"

android:drawableRight="@drawable/ic_appointment_time"
                android:paddingRight="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />



        </LinearLayout>

        <LinearLayout
android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size15"

android:layout_marginTop="10dp"
            android:background="@drawable/bg_border_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/spinner_time"

                style="@style/MySpinnerNew"

                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:spinnerMode="dialog"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size15"
android:visibility="gone"

            android:background="@drawable/bg_border_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub Activity Type"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <TextView
                android:id="@+id/txt_time2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select Time"
                android:gravity="center|start"
                android:visibility="visible"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/ic_appointment_time"
                android:paddingRight="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size15"

            android:layout_marginTop="10dp"
            android:background="@drawable/bg_border_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/spinner_time2"

                style="@style/MySpinner"

                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:spinnerMode="dialog"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size15"


            android:background="@drawable/bg_border_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub Activity Type"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/txt_time3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select Time"
                android:gravity="center|start"
                android:visibility="visible"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/ic_appointment_time"
                android:paddingRight="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size15"

            android:layout_marginTop="10dp"
            android:background="@drawable/bg_border_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">



            <Spinner
                android:id="@+id/spinner_time3"

                style="@style/MySpinner"

                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:spinnerMode="dialog"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<!--        <LinearLayout-->
<!--            android:layout_width="wrap_content"-->
<!--           android:layout_marginTop="10dp"-->
<!--            android:layout_alignParentStart="true"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            android:orientation="horizontal"-->
<!--            android:layout_height="wrap_content">-->
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:visibility="gone"
                android:src="@drawable/notinew"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:textColor="#231F20"
                android:textSize="14dp"
                android:fontFamily="@font/mulishbold"
android:textStyle="bold"

                android:text=" Allow Notification"/>
            <Switch
                android:id="@+id/switch_noti"
                android:layout_width="wrap_content"
                android:thumb="@drawable/custome_switch_selector"
                android:track="@drawable/custome_track"                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_height="25dp"/>
<!--        </LinearLayout>-->

    </RelativeLayout>



    <Button
        android:id="@+id/buttonAddMedicine"
        style="@style/button_Style_cal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/size20"
        android:layout_above="@+id/dummyview"
        android:layout_marginBottom="@dimen/size10"


        android:text="Add Medicine"
        />

    </LinearLayout>

    </ScrollView>



</LinearLayout>