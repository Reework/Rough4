<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:showIn="@layout/activity_e_shopping_new"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="3">




        <androidx.cardview.widget.CardView
            android:id="@+id/card_nut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="0dp">

            <Button
                android:id="@+id/btn_medicine"

                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@color/green_recipe"
                android:text="Medicines"
                android:textAllCaps="false"


                android:textColor="@color/white_recipe"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_ing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"

            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="0dp">

            <Button
                android:id="@+id/btn_food"

                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@color/white_recipe"
                android:text="Food"
                android:textAllCaps="false"


                android:textColor="@color/black_recipe"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/card_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="0dp">

            <Button
                android:id="@+id/btn_restaurant"

                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@color/white_recipe"
                android:gravity="center"
                android:text="REEstaurants"
                android:textAllCaps="false"

                android:textColor="@color/black_recipe"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>




    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_medicine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="visible"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textColor="@color/black_recipe"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_food"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textColor="@color/black_recipe"
            android:textSize="26dp"
android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_restaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textColor="@color/black_recipe"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible" />

    </LinearLayout>




</LinearLayout>