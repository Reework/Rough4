<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F6F8"
    tools:context=".reework.activity.recipe.SeeAllFoodActivity">
    <include
        android:id="@+id/custom_toolbar"
        android:background="#F3F6F8"

        layout="@layout/custom_toolbar_search" />
    <SearchView
        android:id="@+id/searchRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextStyle.mulishregular"
        app:theme="@style/AppSearchView"
       android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_black_box_search"
        android:iconifiedByDefault="false"
        android:queryHint="Search your recipe"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylcer_spiritual_category"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_10sdp"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_grey_button"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:alpha="0.8"
            android:textColor="@color/white"
            style="@style/TextStyle.mulishsemibold"
            android:padding="@dimen/_3sdp"
            android:text="Indian"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"

            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_rect"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:alpha="0.8"
            android:textColor="@color/very_dark_grey"
            style="@style/TextStyle.mulishsemibold"
            android:padding="@dimen/_3sdp"
            android:text="Chinese"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"

            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_rect"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:alpha="0.8"
            android:textColor="@color/very_dark_grey"
            style="@style/TextStyle.mulishsemibold"
            android:padding="@dimen/_3sdp"
            android:text="Cousin"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"

            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_rect"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:alpha="0.8"
            android:textColor="@color/very_dark_grey"
            style="@style/TextStyle.mulishsemibold"
            android:padding="@dimen/_3sdp"
            android:text="Cousin"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"

            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_rect"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:alpha="0.8"
            android:textColor="@color/very_dark_grey"
            style="@style/TextStyle.mulishsemibold"
            android:padding="@dimen/_3sdp"
            android:text="Thai"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"

            android:layout_height="wrap_content"/>





    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_seeAll"
        android:layout_width="match_parent"
        app:spanCount="2"
        android:background="#F3F6F8"
        android:layout_margin="@dimen/_10sdp"

        tools:listitem="@layout/lay_seeall"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_height="wrap_content"/>

</LinearLayout>