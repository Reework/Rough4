<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"

    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/rlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                >



                <LinearLayout
                    android:id="@+id/ll_vegnonveg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/non_veg_border_rectangle"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:id="@+id/ivIsVegOrNonveg"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/fibre_circle"
                        android:layout_margin="5dp"
                        android:elevation="8dp"
                        />
                </LinearLayout>



                <ImageView
                    android:id="@+id/ivFood"
                    android:scaleType="fitXY"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_home_reeplan" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvRecipeName"
                style="@style/TextStyle.CalibriLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/rel"
                android:text="Food Name"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="15dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#231F20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCalorie"
                style="@style/TextStyle.CalibriLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRecipeName"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/rel"
                android:text="Calories"
                android:textSize="13dp"
                android:alpha="0.6"
                android:textColor="#99231F20" />
            <ImageView
                android:id="@+id/ivFavrorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:visibility="visible"
                android:src="@drawable/ic_bookmark"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>


    </RelativeLayout>




</androidx.cardview.widget.CardView>