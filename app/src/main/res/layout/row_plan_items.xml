<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/size5"

    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_final_alternate_Show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/size6"
        android:layout_marginTop="@dimen/size10"
        android:textSize="@dimen/text_tiny"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_alternate_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreen3"
        android:text=" Alternate Itmes "

        android:textColor="@color/white"

        android:textStyle="bold"
        android:padding="@dimen/size4"
        android:textSize="@dimen/text_tiny"
        android:layout_gravity="center"
        android:gravity="center"/>


    <TextView
        android:id="@+id/txt_adddd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ADD "
        android:background="@color/dark_grey_blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/size6"
        android:textSize="@dimen/text_tiny"
        android:layout_gravity="center"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/ll_alternate"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="@dimen/size3"
            >

            <ImageView
                android:id="@+id/img_recipe"
                android:layout_width="@dimen/_40sdp"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_height="@dimen/_40sdp"/>
            <ImageView
                android:id="@+id/imgMyPlan_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:padding="@dimen/_7sdp"
                android:layout_gravity="center"
                android:src="@drawable/bg_my_plan_right_mark_selector" />

            <TextView
                android:id="@+id/tvQty"
                style="@style/TextStyle.CoolveticaRegular"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:gravity="center"
                android:text="  "
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/text_tiny"
                android:background="@drawable/circulat_txt"
                android:layout_marginTop="@dimen/size5"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/tvPlan_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:layout_marginRight="6dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="@dimen/size3"

                android:gravity="start"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="@dimen/text_small"/>

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="22dp"
                android:src="@drawable/ic_edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_remark"
            android:layout_marginBottom="@dimen/size10"

            android:background="@color/white"
            android:gravity="center_horizontal"
            android:padding="@dimen/size3"
            android:weightSum="2">
            <TextView
                android:id="@+id/tvQty_headr"
                style="@style/TextStyle.CoolveticaRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min "
                android:visibility="gone"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/text_tiny"
                android:layout_marginTop="@dimen/size5"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textColor="@color/colorPremiumBlack"
                />

            <TextView
                style="@style/TextStyle.CoolveticaRegular"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:gravity="center"
                android:text="  "
                android:visibility="gone"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/text_tiny"
                android:background="@drawable/circulat_txt"
                android:layout_marginTop="@dimen/size5"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textColor="@color/colorPremiumBlack"
                />

            <TextView
                android:id="@+id/txt_header_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Remark : "/>

            <TextView
                android:id="@+id/txt_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:layout_marginRight="6dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"

                android:gravity="start"
                android:textColor="@color/dark_grey_blue"
                android:textSize="@dimen/text_tiny"/>

            <ImageView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="22dp"
                android:src="@drawable/ic_edit" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_videoyoutube"
                android:layout_width="@dimen/_30sdp"
                android:layout_toLeftOf="@+id/txt_view"
                android:src="@drawable/youtube"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:id="@+id/txt_view"

                android:layout_width="wrap_content"
                android:text="View Recipe"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_edit_food_plan"

                android:textSize="@dimen/text_tiny"

                android:layout_margin="@dimen/size5"
                android:background="@color/colorBlue4"
                android:padding="@dimen/size4"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_edit_food_plan"

                android:layout_width="wrap_content"
                android:text="    EDIT   "
                android:textColor="@color/white"
                android:layout_centerVertical="true"

                android:textSize="@dimen/text_tiny"
                android:layout_alignParentEnd="true"

                android:layout_margin="@dimen/size5"
                android:background="@color/dark_red1"
                android:padding="@dimen/size4"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_add_food_plan"
                android:layout_width="wrap_content"
                android:text="  ADD  "
                android:textSize="@dimen/text_tiny"
                android:visibility="gone"

                android:textColor="@color/white"
                android:layout_margin="@dimen/size5"
                android:background="@color/dark_grey_blue"
                android:padding="@dimen/size2"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>