<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_avg_nutrition"
        android:visibility="visible"
        android:background="@drawable/bg_light_box_border"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size8"
            android:background="@color/line_color">

            <TextView
                android:id="@+id/txt_ingradeint_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ingradient"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/stpi_default_text_size"

                android:padding="@dimen/size2"
                android:singleLine="true"
                android:textStyle="bold"

                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/size2"
                android:text="Unit"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/stpi_default_text_size"

                android:textStyle="bold"

                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size2"
                android:text="Qty"
                android:singleLine="true"
                android:textSize="@dimen/stpi_default_text_size"

                android:textColor="@color/black"

                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/size2"
                android:gravity="center"
                android:text="Remark"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/stpi_default_text_size"

                android:textStyle="bold"

                android:layout_weight="1"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:orientation="horizontal"


                android:layout_weight="0.3">
                <ImageView
                    android:id="@+id/img_edit_ingrad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"/>




            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>