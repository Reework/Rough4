<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardElevation="0dp"
    app:cardBackgroundColor="#F3F6F8"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3F6F8"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_date_cr"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Date :"

                android:paddingTop="@dimen/size10"
                android:paddingBottom="@dimen/size10"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_date_create"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text=""

                android:paddingTop="@dimen/size10"
                android:paddingBottom="@dimen/size10"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_toLeftOf="@id/imgMedicineEdit"
            android:layout_toStartOf="@id/imgMedicineEdit"
            android:padding="@dimen/size4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="@dimen/size4"
                android:text="Time"
                style="@style/TextStyle.CoolveticaRegular"

                android:textColor="@android:color/black"
                android:gravity="start"
                android:id="@+id/txt_Activity_clock_timde"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:padding="@dimen/size4"
                android:text="Activity"
                android:textColor="@android:color/black"
                style="@style/TextStyle.CoolveticaRegular"

                android:gravity="start"
                android:id="@+id/txt_Activity_name"/>

            <!--                    <TextView-->
            <!--                        android:layout_width="0dp"-->
            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:layout_weight="0.8"-->
            <!--                        android:padding="@dimen/size4"-->
            <!--                        android:text="Time"-->
            <!--                        style="@style/TextStyle.CoolveticaRegular"-->

            <!--                        android:textColor="@android:color/black"-->
            <!--                        android:gravity="start"-->
            <!--                        android:id="@+id/txt_Activity_clock_timde"/>-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="@dimen/size4"
                android:gravity="start"
                android:textColor="@android:color/black"

                style="@style/TextStyle.CoolveticaRegular"

                android:text="Duration"
                android:id="@+id/txt_Activity_duration"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="@dimen/size4"
                android:text="Calories"
                android:textColor="@android:color/black"

                style="@style/TextStyle.CoolveticaRegular"

                android:id="@+id/txt_Activity_calories_burned"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyler_activity_history_sub_page"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>