        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_msg_white"

            android:layout_marginStart="@dimen/_15sdp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulishsemibold"
                    android:textSize="13dp"
                    android:text="Sleep"/>
                <TextView
                    android:id="@+id/textHome_Sleep_Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="1:00 Hr"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgHome_AddSleep"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_add_sleep"

                android:layout_height="wrap_content"/>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/constrainActivity_Master"
        android:layout_width="match_parent"
        android:background="@drawable/bg_msg_white"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="@dimen/_50sdp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/bg_msg_white"

            >


            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="match_parent"
