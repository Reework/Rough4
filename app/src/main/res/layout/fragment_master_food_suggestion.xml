<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"


    android:background="#F3F6F8"
    tools:context=".reework.activity.FoodModule.fragment.MasterFoodSuggestionFrag">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_grey_20"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_heathcdondition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/size8"

                android:text="Health Condition"
                android:gravity="center"
                android:textColor="@android:color/black"

                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/txt_dodes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Donâ€™t's"

                android:gravity="center"
                android:padding="@dimen/size8"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/txt_ddonts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Do's"

                android:gravity="center"
                android:padding="@dimen/size8"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardElevation="@dimen/size10"
        app:cardCornerRadius="@dimen/size6"

        android:layout_margin="@dimen/size10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size6"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_healthcodition"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/line_grey_20"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                style="@style/textSignup"

                android:text="Dont's"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextStyle.CoolveticaRegular"
                android:textColor="@android:color/black"

                android:text="stars Scarlett Johansson and Adam Driver, with Laura Dern, Ala"
                android:id="@+id/txt_donts"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:gravity="start"
                style="@style/textSignup"

                android:text="Do's"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextStyle.CoolveticaRegular"
                android:textColor="@android:color/black"

                android:text="stars Scarlett Johansson and Adam Driver, with Laura Dern, Alastars Scarlett Johansson and Adam Driver, with Laura Dern, Ala"
                android:id="@+id/txt_dos"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ListView
        android:id="@+id/recycler_suggestion"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F6F8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Tips Healthy Diet "
                android:layout_marginStart="20dp"

                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/mulishbold"
                android:textColor="@color/black" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_suggestion_tips"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_marginTop="@dimen/size5"
                android:padding="@dimen/size5"
                android:background="#F3F6F8"
                android:layout_height="match_parent" />
        </LinearLayout>


    </RelativeLayout>











</LinearLayout>