<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/remove_pos_img"
    android:layout_width="160dp"
    android:layout_height="wrap_content"



    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="160dp"
        app:cardCornerRadius="10dp"

        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlmy_bca_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



            <ProgressBar
                android:id="@+id/progress"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"/>


            <ImageView
                android:id="@+id/ivBeforeAfter"
                android:layout_width="160dp"
                android:layout_height="210dp"


                android:scaleType="fitXY"
                android:src="@android:drawable/ic_menu_camera" />


            <TextView
                android:id="@+id/imgMedicineDelete1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/size5"
                android:visibility="gone"
                android:textColor="@color/white"
                android:background="@color/red_btn_bg_color"
                android:gravity="center"
                android:text="Delete"/>


            <ImageView

                android:id="@+id/dd"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@color/colorGreen3"
                android:padding="4dp"
                android:src="@drawable/ic_cancel" />




            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/imgMedicineDelete"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bg_rounded_corner_gray"/>


            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/imgMedicine"
                android:layout_marginRight="13dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_delete_white_24dp"/>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:gravity="start"

        android:paddingLeft="5dp"
        android:textColor="@color/black"

        android:textStyle="bold"
        android:id="@+id/txt_ulaod_date"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_below="@id/card1"
        android:text="12 Jun 2020 1:00 PM"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:gravity="start"

        android:paddingLeft="5dp"
        android:textColor="@color/msg_border_color"

        android:textStyle="bold"
        android:id="@+id/txt_ulaod_time"

        android:layout_below="@id/txt_ulaod_date"
        android:text="12 Jun 2020 1:00 PM"/>




</RelativeLayout>
