<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/remove_pos_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_7sdp"
    android:orientation="vertical"
    android:background="@color/line_grey_20">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/ivBeforeAfter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/txt_ulaod_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivBeforeAfter"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@color/colorGreen1"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="12 Jun 2020 1:00 PM"
            android:textColor="@color/black"
            android:textSize="@dimen/_7sdp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/imgMedicineDelete1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/red_btn_bg_color"
            android:gravity="center"
            android:padding="@dimen/size5"
            android:text="Delete"
            android:textColor="@color/white"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/dd"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txt_ulaod_date"
            android:layout_alignParentEnd="true"
            android:background="@color/colorGreen3"
            android:clickable="true"
            android:padding="4dp"
            android:src="@drawable/ic_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgMedicineDelete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/remove"

            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dateshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        style="@style/TextStyle.CoolveticaRegular"
        android:letterSpacing="0.1"
        android:textColor="@android:color/black"
        android:text="Me on 5 decmeber 2021"
        android:background="@color/colorGreen1"/>

