<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/ll_bottom_health"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulishbold"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/black"
            android:alpha="0.6"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Please share your details."/>

        <TextView
            android:id="@+id/txt_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Country"
            android:fontFamily="@font/mulishregular"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/arrow_down_grey"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/bg_black_box"/>

        <TextView
            android:id="@+id/txt_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="State"
            android:fontFamily="@font/mulishregular"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/arrow_down_grey"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/bg_black_box"/>
        <TextView
            android:id="@+id/txt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="City"
            android:fontFamily="@font/mulishregular"
            android:drawableEnd="@drawable/arrow_down_grey"

            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/bg_black_box"/>
        <EditText
            android:id="@+id/edt_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:hint="PIN"
            android:inputType="number"
            android:maxLength="6"
            android:fontFamily="@font/mulishregular"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/bg_black_box"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">
            <EditText
                android:id="@+id/edt_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:hint="Weight"
                android:layout_weight="1.5"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"



                android:background="@drawable/bg_black_box"/>
            <TextView
                android:id="@+id/txt_kgs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="KG"

                android:gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"
                android:textSize="@dimen/text_tiny"

                android:background="@drawable/bg_newdesign_btn"/>
            <TextView
                android:id="@+id/txt_pounds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="Pound"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_tiny"

                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"
                android:background="@drawable/bg_black_box"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">
            <EditText
                android:id="@+id/edt_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:hint="Height"
                android:layout_weight="1.5"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"



                android:background="@drawable/bg_black_box"/>
            <TextView
                android:id="@+id/txt_cm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="CM"
                android:gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"
                android:textSize="@dimen/text_tiny"

                android:background="@drawable/bg_newdesign_btn"/>
            <TextView
                android:id="@+id/txt_ftinch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:gravity="center"
                android:text="@string/ftinch"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:textSize="@dimen/text_tiny"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"
                android:background="@drawable/bg_black_box"/>


        </LinearLayout>
        <TextView
            android:id="@+id/txt_bloodgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Blood Group"
            android:fontFamily="@font/mulishregular"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/arrow_down_grey"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/bg_black_box"/>
        <TextView
            android:id="@+id/txt_foodculture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Food Culture"
            android:fontFamily="@font/mulishregular"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/arrow_down_grey"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/bg_black_box"/>

    </LinearLayout>

</ScrollView>