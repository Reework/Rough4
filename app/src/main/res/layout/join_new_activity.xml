<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="@dimen/_20sdp"
       >

       <ImageView
           android:layout_width="@dimen/_20sdp"
           android:layout_height="@dimen/_30sdp"
           android:layout_margin="@dimen/_15sdp"
           android:focusable="true"
           android:id="@+id/img_close_joinnow"

           android:src="@drawable/back_arrow"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:id="@+id/ll_maddd"
           android:layout_alignParentTop="true"
           android:layout_above="@+id/ll_bottom"
           android:layout_height="wrap_content">
           <include
               android:id="@+id/custom_toolbar"
               android:visibility="gone"
               layout="@layout/custom_toolbar" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Steps"
               android:visibility="gone"
               android:textColor="@android:color/black"
               android:textStyle="bold"
               android:textSize="@dimen/size20"
               android:padding="@dimen/size10">

           </TextView>
           <TextView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@android:color/black"
               android:textSize="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_20sdp"
               android:gravity="center"
               style="@style/TextStyle.mulishsemibold"
               android:text="Join Now"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@android:color/black"
               android:textSize="@dimen/_14sdp"
               android:layout_marginTop="@dimen/_14sdp"
               android:gravity="center"
               android:alpha="0.6"
               style="@style/TextStyle.mulishregular"
               android:text="Follow these steps"/>

           <androidx.viewpager.widget.ViewPager
               android:id="@+id/vp_joinnow"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>



       </LinearLayout>

     <LinearLayout
         android:id="@+id/ll_bottom"
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         >
         <LinearLayout
             android:id="@+id/layoutDots"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_marginTop="@dimen/_10sdp"

             android:layout_height="@dimen/_30sdp"/>

         <View
             android:layout_width="match_parent"
             android:visibility="invisible"

             android:layout_height="@dimen/_35sdp"/>
         <Button
             android:id="@+id/next_button"
             android:textSize="@dimen/text_large"
             style="@style/button_Style_newdesign"

             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@android:color/white"
             android:visibility="visible"
             android:layout_marginStart="@dimen/_30sdp"
             android:layout_marginEnd="@dimen/_30sdp"
             android:layout_marginBottom="@dimen/_10sdp"


             android:elevation="@dimen/size6"

             android:text="Next"
             android:textStyle="bold" />

     </LinearLayout>
   </RelativeLayout>
</RelativeLayout>