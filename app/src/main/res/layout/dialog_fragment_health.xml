<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPremiumWhite"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/labelMessageHealth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:lineSpacingExtra="@dimen/text_view_line_spacing_4dp"
        android:text="@string/health_confirmation_message"
        android:textAlignment="center"
        android:textColor="@color/colorPremiumBlack"
        android:textSize="@dimen/text_normal" />


    <Button
        android:id="@+id/buttonHealth_Ok"
        style="@style/button_Style_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:text="Ok" />
</LinearLayout>