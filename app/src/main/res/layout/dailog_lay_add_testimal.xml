<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_edit_text_box_border"

    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/testimonal_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:textColor="@color/white"
        android:textSize="@dimen/text_large"
        android:background="@drawable/squarebtn"
        android:padding="@dimen/size12"
        android:text="Add Testimonials"/>

    <EditText
        android:id="@+id/edt_testominals"
        android:layout_width="match_parent"
        android:maxLength="800"
        android:maxLines="14"
        android:gravity="start"
        android:layout_margin="@dimen/size15"
        android:hint="Enter  here"
        android:padding="@dimen/size10"
        android:background="@drawable/bg_edit_text_box_border"
        android:minLines="14"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/size10"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_upload_file"
            android:layout_width="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_attach_file_black_24dp"
            android:layout_height="@dimen/_30sdp"/>


        <ImageView
            android:id="@+id/img_upload_image"
            android:layout_width="@dimen/_30sdp"
            android:layout_toLeftOf="@+id/img_upload_file"
            android:src="@drawable/ic_insert_photo_black_24dp"
            android:layout_height="@dimen/_30sdp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <Button

            android:id="@+id/btn_add_png"
            android:layout_alignParentRight="true"
            style="@style/button_Style_cal"

            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:padding="@dimen/size2"
            android:layout_marginLeft="@dimen/size2"
            android:layout_marginRight="@dimen/size5"
            android:layout_marginTop="@dimen/size10"
            android:layout_above="@+id/dummyview"
            android:layout_marginBottom="@dimen/size10"


            android:text="File"
            />
        <Button
            android:id="@+id/btn_add_image"

            android:layout_alignParentRight="true"
            style="@style/button_Style_cal"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/size2"
            android:layout_marginLeft="@dimen/size5"
            android:layout_marginRight="@dimen/size2"
            android:layout_marginTop="@dimen/size10"
            android:layout_above="@+id/dummyview"
            android:layout_marginBottom="@dimen/size10"
            android:text="Image"
            />


    </LinearLayout>




    <Button
        android:id="@+id/btn_submit_testomials"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size10"
        android:layout_height="wrap_content"
        android:text="Submit"
        style="@style/button_squarebtn"/>

</LinearLayout>