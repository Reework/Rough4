<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_mediceine"
        android:fadeScrollbars="false"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPremiumWhite"
            android:orientation="vertical"
            android:padding="20dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/labelMedicineTitle"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="ep Time"
                    android:textColor="@color/colorPremiumBlack"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:id="@+id/close_slepp_histoy_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_popup_cancel" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"
                android:visibility="gone"

                android:text="Schedule Sleep Hours"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/edt_schedule_sleep_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:clickable="false"
                android:enabled="false"

                android:visibility="gone"
                android:inputType="textPersonName"
                android:maxLength="20" />


            <RadioGroup
                android:id="@+id/rd_group_sleep"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">


                <RadioButton
                    android:id="@+id/rd_btn_dreamless_sleep"

                    android:layout_width="wrap_content"
                    android:text="Deep sleep"
                    android:checked="true"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/rd_btn_dreamwith_sleep"

                    android:layout_width="wrap_content"
                    android:text="Disturbed sleep"

                    android:layout_height="wrap_content"/>
            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/size5"
                android:layout_marginTop="@dimen/size5"
                android:text="How many times did you get-up during sleep?"
                android:textColor="@color/black"
                android:textStyle="bold">


            </TextView>
            <EditText
                android:id="@+id/edt_sleep_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                android:text="0"
                android:background="@color/white"
                android:padding="@dimen/size5"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark">

            </View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actual Sleep Hours"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size8"
                    android:layout_weight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size5"
                            android:visibility="visible"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:text="Entry Date :"
                                android:padding="@dimen/size5"
                                android:textStyle="bold"
                                >




                            </TextView>

                            <TextView
                                android:id="@+id/txt_entry_date_histrory"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/size5"
                                android:background="@drawable/rect_shape" />






                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size5"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:text="Start Time :"
                                android:padding="@dimen/size5"
                                android:textStyle="bold"
                                >




                            </TextView>

                            <TextView
                                android:id="@+id/txt_sleep_date_from_dialog_edit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/size5"
                                android:background="@drawable/rect_shape" />






                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size5"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:text="End Time   :"
                                android:padding="@dimen/size5"
                                android:textStyle="bold"
                                android:gravity="start"
                                >




                            </TextView>

                            <TextView
                                android:id="@+id/txt_sleep_date_to_dialog_edit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/size5"
                                android:background="@drawable/rect_shape" />






                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>




                <EditText
                    android:id="@+id/edt_actual_sleep_hours_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:enabled="false"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/size5"

                    android:inputType="textPersonName"
                    android:maxLength="20" />



            </LinearLayout>
































            <Button
                android:id="@+id/btn_update_sleep_history_time"
                style="@style/button_Style_cal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size2"
                android:layout_marginLeft="@dimen/size2"
                android:layout_marginRight="@dimen/size2"
                android:layout_marginTop="@dimen/size10"
                android:layout_above="@+id/dummyview"
                android:layout_marginBottom="@dimen/size10"


                android:text="Update"
                />


        </LinearLayout>

    </ScrollView>



</RelativeLayout>