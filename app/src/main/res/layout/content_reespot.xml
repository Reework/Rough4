<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:showIn="@layout/activity_reespot"
    >




    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/custom_toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="4">




            <androidx.cardview.widget.CardView
                android:id="@+id/card_nut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="0dp">

                <Button
                    android:id="@+id/btn_yogatrainers"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="@color/green_recipe"
                    android:text="Yoga trainers"
                    android:textAllCaps="false"


                    android:textColor="@color/white_recipe"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_ing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"

                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="0dp">

                <Button
                    android:id="@+id/btn_gym"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="@color/white_recipe"
                    android:text=" Gym "
                    android:textAllCaps="false"


                    android:textColor="@color/black_recipe"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/card_rec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="0dp">

                <Button
                    android:id="@+id/btn_gardens"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="@color/white_recipe"
                    android:gravity="center"
                    android:text="Gardens"
                    android:textAllCaps="false"

                    android:textColor="@color/black_recipe"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="0dp">

                <Button
                    android:id="@+id/btn_healthyrestaurants"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="@color/white_recipe"
                    android:gravity="center"
                    android:text=" Healthy Restaurants "
                    android:textAllCaps="false"

                    android:textColor="@color/black_recipe"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/layout_yogatrainers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_large"

            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_gym"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"

        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_large"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_gardens"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_large"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_healthyrestaurants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_large"

            />

    </LinearLayout>




</LinearLayout>