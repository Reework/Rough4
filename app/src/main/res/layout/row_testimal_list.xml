<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="@dimen/size10"
    android:background="@color/mobikwik_ligthest_grey"
    

    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/img_user"
        android:id="@+id/txt_testomal_time"
        android:textStyle="bold"
        android:gravity="end"
        android:textSize="@dimen/text_tiny"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/dark_grey_blue"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/size40"
            android:padding="@dimen/size5"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/size5"
            android:layout_height="@dimen/size40"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/img_user"
            android:id="@+id/txt_testomal_text"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/img_testominal"
            android:src="@drawable/user_welcome"
            android:layout_width="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/size10"
            android:layout_below="@+id/txt_testomal_text"
            android:layout_toRightOf="@+id/img_user"

            android:layout_height="@dimen/_80sdp"/>
        <TextView
            android:id="@+id/txt_test_pdf"
            android:layout_width="match_parent"
            android:layout_below="@+id/img_testominal"
            android:layout_margin="@dimen/size10"
            android:background="@color/white"
            android:padding="@dimen/_5sdp"
            android:text="Test.pdf"
            android:visibility="gone"
            android:layout_toRightOf="@+id/img_user"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:padding="@dimen/size5"
            android:textColor="@color/colorGreen5"
            android:layout_marginLeft="@dimen/size60"
            android:layout_marginTop="@dimen/size15"

            style="@style/TextStyle.CoolveticaRegular"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_age"
            android:layout_width="wrap_content"
            android:padding="@dimen/size5"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/size15"

            style="@style/TextStyle.CoolveticaRegular"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>