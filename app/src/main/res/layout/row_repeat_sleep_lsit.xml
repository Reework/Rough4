<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       app:cardCornerRadius="@dimen/size10"
       app:cardElevation="0dp"
       app:cardBackgroundColor="@color/white"
       app:cardUseCompatPadding="true"

       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:background="@color/white"
           android:padding="@dimen/size10"
           android:layout_height="wrap_content">
           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="@dimen/_40sdp"
               android:layout_height="@dimen/_40sdp"
               android:layout_gravity="center_vertical"
               android:background="@color/white"
               android:src="@drawable/sleep"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:padding="@dimen/size3"
               android:background="@color/white"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:padding="@dimen/size5"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/txtsleeptype"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:visibility="visible"
android:textStyle="bold"
                       android:textColor="@color/black"
                       android:fontFamily="@font/mulishsemibold"
android:textSize="12dp"
                       android:text="Deep Sleep"/>
                   <TextView
                       android:id="@+id/txt_start_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"

                       android:layout_below="@+id/txtsleeptype"
                       android:layout_alignParentStart="true"
android:fontFamily="@font/mulishsemibold"
                       android:layout_toLeftOf="@+id/txt_add_repeat_sleep"
                       android:textColor="#99231F20"
                       android:alpha="0.6"
android:textStyle="bold"
                       android:textSize="10dp"
                       android:text="12-1-22 1:20 PM" />
                   <TextView
                       android:id="@+id/txt_add_repeat_sleep"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/size5"
                       android:gravity="end"
                       android:layout_centerVertical="true"
                       android:layout_alignParentEnd="true"
                       android:textColor="@color/black"
                       android:layout_gravity="end"

                       android:layout_alignParentRight="true"
                       android:background="@color/line_color"
                       android:text="     ADD     "/>
               </RelativeLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:padding="@dimen/size3"
                   android:visibility="gone"

                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/size3"
                       style="@style/TextStyle.CoolveticaRegular"
                       android:textColor="@color/black"
                       android:layout_margin="@dimen/size3"
                       android:text="End Time     " />
                   <TextView
                       android:id="@+id/txt_end_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/size3"

                       android:textColor="@color/black"
                       android:layout_margin="@dimen/size3"
                       android:text="12-1-22 1:20 PM" />
               </LinearLayout>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:padding="@dimen/size3"

                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:visibility="gone"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:padding="@dimen/size3"
                               style="@style/TextStyle.CoolveticaRegular"
                               android:textColor="@color/black"
                               android:layout_margin="@dimen/size3"
                               android:text="Total Time " />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:padding="@dimen/size3"

                               android:textColor="@color/black"
                               android:layout_margin="@dimen/size3"
                               android:text="4 hours" />
                       </LinearLayout>
                   </LinearLayout>



               </RelativeLayout>

           </LinearLayout>

       </LinearLayout>
   </androidx.cardview.widget.CardView>

</LinearLayout>