<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bkgr_white_card_radius_10dp">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/drawable_left_green_border" />

    <LinearLayout
        android:id="@+id/ll_meda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/success_stroke_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_medicine_logo"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/size10"
                android:scaleType="fitXY"
                android:background="@color/line_grey_20"
                android:src="@drawable/logo"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/imgMedicineDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:background="@drawable/squarebtn_new_delete"

                    android:text=" Delete "
                    android:textSize="15sp"
                     />

                <TextView
                    android:id="@+id/imgMedicineEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/squarebtn"

                    android:layout_toLeftOf="@id/imgMedicineDelete"
                    android:layout_toStartOf="@id/imgMedicineDelete"
                    android:textSize="15sp"

                    android:text="  Edit  "
                     />

                <TextView
                    android:id="@+id/text_MedicineName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/imgMedicineEdit"
                    android:layout_toStartOf="@id/imgMedicineEdit"
                    android:textColor="@color/colorPremiumBlack"
                    android:textSize="16sp" />

            </RelativeLayout>


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/size3"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days: "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_tiny" />

            <TextView
                android:id="@+id/textMedicineDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textStyle="bold"

                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:textColor="@color/white"
                android:text="Sun | Mon | Tue | Wed | Thu | Fri | Sat"
                android:textSize="@dimen/text_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Frequency: "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_tiny" />

            <TextView
                android:id="@+id/textMedicineTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="@dimen/text_tiny" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>