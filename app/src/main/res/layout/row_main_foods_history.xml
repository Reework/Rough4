<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_date_create"
            android:layout_width="match_parent"
            android:text=""

            android:textStyle="bold"
            android:fontFamily="@font/mulishbold"
            android:textColor="@color/black"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="#F3F6F8"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_toLeftOf="@id/imgMedicineEdit"
            android:layout_toStartOf="@id/imgMedicineEdit"
            android:padding="@dimen/size4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="@dimen/size4"
                android:text="Time"
                style="@style/TextStyle.CoolveticaRegular"

                android:textColor="@android:color/black"
                android:gravity="start"
                android:id="@+id/txt_Activity_clock_timde"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:padding="@dimen/size4"
                android:text="Activity"
                android:textColor="@android:color/black"
                style="@style/TextStyle.CoolveticaRegular"

                android:gravity="start"
                android:id="@+id/txt_Activity_name"/>

            <!--                    <TextView-->
            <!--                        android:layout_width="0dp"-->
            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:layout_weight="0.8"-->
            <!--                        android:padding="@dimen/size4"-->
            <!--                        android:text="Time"-->
            <!--                        style="@style/TextStyle.CoolveticaRegular"-->

            <!--                        android:textColor="@android:color/black"-->
            <!--                        android:gravity="start"-->
            <!--                        android:id="@+id/txt_Activity_clock_timde"/>-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="@dimen/size4"
                android:gravity="start"
                android:textColor="@android:color/black"

                style="@style/TextStyle.CoolveticaRegular"

                android:text="Duration"
                android:id="@+id/txt_Activity_duration"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="@dimen/size4"
                android:text="Calories"
                android:textColor="@android:color/black"

                style="@style/TextStyle.CoolveticaRegular"

                android:id="@+id/txt_Activity_calories_burned"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"

            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyler_activity_history_sub_page"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>




    </LinearLayout>



</LinearLayout>