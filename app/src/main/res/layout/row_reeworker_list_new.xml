<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_8sdp"
    app:cardElevation="@dimen/_4sdp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_reecoach_image"
            android:layout_width="@dimen/_60sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentStart="true"
            android:layout_height="@dimen/_60sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/img_reecoach_image"
            android:id="@+id/txt_reecoach_name"
            android:textColor="@color/black"
            android:letterSpacing="0.1"
            style="@style/TextStyle.CoolveticaRegular"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/img_reecoach_image"
            android:id="@+id/txt_reecoach_address"
            android:layout_below="@+id/txt_reecoach_name"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>