<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_report_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:background="@color/colorPrimaryDark"

                android:textColor="@color/white"
                style="@style/TextStyle.CoolveticaRegular"/>

            <TextView
                android:id="@+id/txt_Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:textColor="@color/black"
                style="@style/TextStyle.CoolveticaRegular"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_occation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_2sdp"
                    style="@style/TextStyle.CoolveticaRegular"

                    android:padding="@dimen/_5sdp"
                    />

                <TextView
                    android:id="@+id/txt_cheat_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_2sdp"

                    style="@style/TextStyle.CoolveticaRegular"

                    android:padding="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/txt_cheat_item_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_2sdp"


                    android:padding="@dimen/_3sdp"/>

                <TextView
                    android:id="@+id/txt_cheat_item_energy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_2sdp"


                    android:padding="@dimen/_3sdp"/>


                <TextView
                    android:id="@+id/txt_alternat_cheat_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_2sdp"

                    android:textColor="@color/black"

                    android:padding="@dimen/_3sdp"/>

                <TextView
                    android:id="@+id/txt_cheat_item_remrk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_2sdp"

                    android:padding="@dimen/_3sdp"/>

                <TextView
                    android:id="@+id/txt_ditory_advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_2sdp"

                    android:padding="@dimen/_3sdp"/>


            </LinearLayout>

        </LinearLayout>


</androidx.cardview.widget.CardView>