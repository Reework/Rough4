<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/squarebtn"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_close_dailog"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/close"
        />

 <ImageView
     android:id="@+id/img_full_screen"
     android:layout_width="match_parent"
     android:layout_marginTop="@dimen/_30sdp"
     android:scaleType="fitCenter"

     android:layout_height="@dimen/_360sdp"/>
    <TextView
        android:id="@+id/txt_name_imge"
        android:layout_width="match_parent"
        style="@style/TextStyle.CoolveticaRegular"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:layout_below="@+id/img_full_screen"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content"/>

</RelativeLayout>