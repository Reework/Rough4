<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bkgr_white_card_radius_10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="4dp">

    <CheckBox
        android:id="@+id/checkBox_Reminder_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_selector_reminder"
        android:text="" />

    <ImageView
        android:id="@+id/imgView_Reminder_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_my_reminders_activity" />

    <TextView
        android:id="@+id/textView_Reminder_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_weight="1.3"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Activity"
        android:textColor="@color/colorPremiumBlack"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/textView_Reminder_item_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@drawable/ic_appointment_time"
        android:drawablePadding="4dp"
        android:text="00:00am"
        android:textColor="@color/colorPremiumBlack"
        android:textSize="@dimen/text_small" />

    <Spinner
        android:id="@+id/spinner_Reminder_item_Times"
        style="@style/MySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/reminder_frequency" />

</LinearLayout>