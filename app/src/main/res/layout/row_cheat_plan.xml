<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false"
        android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_occation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:background="@color/colorPrimaryDark"

                android:textColor="@color/white"
                style="@style/TextStyle.CoolveticaRegular"/>

            <TextView
                android:id="@+id/txt_Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:textColor="@color/black"
                style="@style/TextStyle.CoolveticaRegular"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_cheat_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    style="@style/TextStyle.CoolveticaRegular"

                    android:padding="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_cheat_item_quantity"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_tiny"

                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/txt_cheat_item_energy"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_tiny"


                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_alternate_itme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_tiny"

                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/txt_alternate_itme_cal"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_tiny"


                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"/>

                </LinearLayout>



                <TextView
                    android:id="@+id/txt_alternat_cheat_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_tiny"

                    android:layout_margin="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/txt_cheat_item_remrk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_tiny"

                    android:layout_margin="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"/>



            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>