<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/custom_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkgr_button_green_no_radius"

        >
        <RadioGroup
            android:id="@+id/radioGroup_sl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/size8"
            android:padding="@dimen/size3"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rd_button_suppliment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_radio_bg_food"
                android:button="@null"
                android:checked="true"
                android:text="  Supplements  " />

            <RadioButton
                android:id="@+id/rd_button_medicaldevices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_radio_bg_food"
                android:button="@null"
                android:text="Medical devices" />






        </RadioGroup>

    </LinearLayout>


    <ViewFlipper
        android:id="@+id/vp_shooping"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_normal"
            android:text="Supplements"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_normal"
            android:text="Medical devices"/>
    </ViewFlipper>





</LinearLayout>