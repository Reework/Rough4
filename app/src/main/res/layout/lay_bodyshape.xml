<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulishsemibold"
            android:layout_marginStart="@dimen/size15"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Body shape"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulishbold"
            android:textSize="@dimen/text_x_xlarge"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="How is your Body shape?"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:alpha="0.6"
            android:fontFamily="@font/mulishbold"
            android:text="Please share your input below :"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rel_healthybmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_done"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Healthy BMI"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"

                />
            <ImageView
                android:id="@+id/img_healthybmi"
                android:layout_width="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/done"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_bananashape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_box"
            android:padding="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/size15"
            android:layout_marginStart="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banana shape"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"

                />
            <ImageView
                android:id="@+id/img_bananashape"
                android:layout_width="@dimen/_25sdp"
                android:src="@drawable/done"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_pearshape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_box"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/size15"
            android:layout_marginEnd="@dimen/size15"
            android:layout_marginStart="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pear shape"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"

                />
            <ImageView
                android:id="@+id/img_pearshape"
                android:layout_width="@dimen/_25sdp"
                android:src="@drawable/done"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_appleshape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_box"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/size15"
            android:layout_marginEnd="@dimen/size15"
            android:layout_marginStart="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple shape"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"

                />
            <ImageView
                android:id="@+id/img_appleshape"
                android:layout_width="@dimen/_25sdp"
                android:src="@drawable/done"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>