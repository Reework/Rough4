<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_margin="@dimen/size10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/squarebtn"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_reecoachtype"
            android:layout_width="@dimen/size96"
            android:src="@drawable/popular"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/size96"/>

        <TextView
            android:id="@+id/lablname"
            android:layout_width="match_parent"
            android:paddingStart="@dimen/size8"
            android:paddingEnd="@dimen/size8"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center"
            android:paddingBottom="@dimen/size8"
            android:text="Sunit Thakur"
            style="@style/TextStyle.CoolveticaRegular"
            android:letterSpacing="0.1"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/_11sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/labltype"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center"
            android:text="Celebrety Reeocach"
            style="@style/TextStyle.CoolveticaRegular"
            android:letterSpacing="0.1"
            android:visibility="gone"
            android:paddingBottom="@dimen/_2sdp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            android:textSize="@dimen/_11sdp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size12"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:visibility="invisible"
                    android:src="@drawable/smartphone" />

                <TextView
                    android:id="@+id/text_ida_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPremiumBlack"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/smartphone" />

            <TextView
                android:id="@+id/text_ReecoachProfile_Mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/email_logo" />

        <TextView
            android:id="@+id/text_ReecoachProfile_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPremiumBlack"
            android:textSize="@dimen/text_small" />
    </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/text_ReecoachProfile_RegAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/colorPremiumBlack"
            android:textSize="@dimen/text_small" />


    </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_Reecoachdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:maxLines="7"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_35sdp"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="@dimen/text_small" />
            <TextView
                android:id="@+id/txtselectreecoach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/squarebtn"
                android:textColor="@android:color/white"
                android:layout_margin="@dimen/_15sdp"
                android:padding="@dimen/_6sdp"
                android:gravity="center"
                android:text="Select Reeocach"/>
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>