<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size15"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/mulishsemibold"
            android:text="Health supplement"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/mulishbold"
            android:text="Do you regularly take any Health supplement?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_x_xlarge"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:alpha="0.6"
            android:fontFamily="@font/mulishbold"
            android:text="Please share your input below :"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rel_healthsuppliment_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_done"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes,please specify the name in remarks"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"

                />
            <ImageView
                android:id="@+id/img_healthsuppliment_yes"
                android:layout_width="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/done"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_healthsuppliment_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_box"
            android:padding="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/size15"
            android:layout_marginStart="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/mulishregular"
                android:textColor="@color/black"

                />
            <ImageView
                android:id="@+id/img_healthsuppliment_no"

                android:src="@drawable/done"
                android:layout_width="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"/>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_health_suppliment"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulishbold"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:alpha="0.6"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Please enter the remarks "/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_black_box"

                android:layout_marginTop="@dimen/size15"
                android:layout_marginEnd="@dimen/size15"
                android:layout_marginStart="@dimen/_15sdp">
                <EditText
                    android:id="@+id/edt_remark_health_suppliment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Remark"
                    android:layout_margin="@dimen/_5sdp"
                    android:paddingLeft="5dp"
                    android:background="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mulishregular"
                    android:textColor="@color/black"

                    />
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/_25sdp"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>