<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_uom"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/defaultmedicine"/>
    <TextView
        android:id="@+id/txt_unit_name"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/size3"
        android:layout_marginBottom="@dimen/size3"
        android:fontFamily="@font/mulishregular"
        android:textColor="#99231F20"

        android:padding="@dimen/size3"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible"/>

</LinearLayout>