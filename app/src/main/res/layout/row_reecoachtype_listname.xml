<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/size10"

    android:background="@color/white1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_reecoachtype"
            android:layout_width="@dimen/size96"
            android:src="@drawable/popular"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/size96"/>



        <TextView
            android:id="@+id/reecocahctypetext"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/size8"
            android:paddingStart="@dimen/size8"
            android:paddingEnd="@dimen/size8"
            android:paddingBottom="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center"
            android:background="#F4F4F4"
            style="@style/TextStyle.CoolveticaRegular"
            android:letterSpacing="0.1"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/_11sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/reecocahaddress"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#F4F4F4"
            android:singleLine="true"
            android:padding="@dimen/_2sdp"
            style="@style/TextStyle.CoolveticaRegular"
            android:letterSpacing="0.1"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            android:textSize="@dimen/_9sdp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>