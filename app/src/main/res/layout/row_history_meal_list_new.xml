<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginTop="@dimen/size3"

        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_clock_new"
/>


        <TextView
        android:id="@+id/textmealtime_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="12:30 PM"

        android:textColor="#99231F20"
        android:textSize="12sp"
        android:gravity="end"


        android:layout_gravity="end"
        android:layout_marginRight="@dimen/size5"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/size2"
        android:layout_toLeftOf="@+id/textmeaccccl_edit"

        android:textStyle="bold"
        android:drawablePadding="@dimen/size5"


        />

    </LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1.4"
            android:layout_width="match_parent"
            android:layout_gravity="end"
android:gravity="end"
            android:layout_height="wrap_content">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_view"
                android:layout_width="38dp"
                android:layout_height="38dp"

                app:srcCompat="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                />


        </LinearLayout>




        <LinearLayout
            android:layout_weight="0.6"
            android:layout_width="match_parent"
android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView android:id="@+id/textAllMealRowName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:textSize="12dp"
                android:singleLine="true"
                android:textColor="@color/colorPremiumBlack"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/textAllMealCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="1800 calories"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="12sp"
                 />



            <TextView
                android:id="@+id/textAllMealQty"
                style="@style/TextStyle.CoolveticaRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="12dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/size5"
                android:textColor="@color/colorPremiumBlack"
                />


            <TextView
                android:id="@+id/txt_history_qnty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:textSize="12dp"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:layout_marginTop="@dimen/size5"
                android:layout_marginLeft="8dp"
                android:textColor="#99231F20"
                />












        </LinearLayout>











    </LinearLayout>





    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:gravity="end"

                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="39dp"
                android:background="@drawable/bg_green_button"
                android:layout_margin="@dimen/size3"
                android:id="@+id/lay_edit"

                android:layout_height="23dp">
            <TextView
                android:id="@+id/textmeal_edit"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:textColor="#FFFFFF"
                android:padding="3dp"

                style="@style/TextStyle.mulishsemibold"
                android:text="Edit"
                android:gravity="center"
                android:textSize="12dp"

                android:layout_height="wrap_content"

                />
            </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"

                    android:gravity="center"

                    android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="55dp"
                android:background="@drawable/bg_pink_button"
                android:layout_margin="@dimen/size3"
                android:id="@+id/lay_current"

                android:layout_height="23dp">

            <TextView
                android:id="@+id/textmeal_delte"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:textColor="#FFFFFF"
                android:padding="3dp"

                style="@style/TextStyle.mulishsemibold"
                android:text="Delete"
                android:gravity="center"
                android:textSize="12dp"

                android:layout_height="wrap_content"

                />

            </LinearLayout>


            </LinearLayout>





    </LinearLayout>


















</LinearLayout>















</LinearLayout>















</LinearLayout>