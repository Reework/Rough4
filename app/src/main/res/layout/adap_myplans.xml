<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"


        app:cardElevation="@dimen/size6"
        app:cardCornerRadius="@dimen/size6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/colorGreyWhite">
                <ImageView
                    android:id="@+id/imgMyPlan_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/bg_my_plan_right_mark_selector" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight=".4"
                    android:text="01:02 AM"
                    android:textStyle="bold"
                    android:textColor="@color/colorPremiumBlack"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/tvSheduleName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:text=""
                    android:textColor="@color/colorPremiumBlack"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivSelected"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/bg_my_plan_active_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="@dimen/size6"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="qty"
                    android:textColor="@color/colorPremiumBlack"
                    android:textSize="@dimen/text_small" />
                <TextView
                    android:id="@+id/tvPlan"
                      android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="10dp"
                     android:text=""
                    android:gravity="start"
                    android:textColor="@color/colorPremiumBlack"
                    android:textSize="@dimen/text_small"/>

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_edit" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>