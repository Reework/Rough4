<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gridlayout_bottom_border"
    android:padding="@dimen/text_view_line_spacing_4dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:text="Date" />

    <TextView
        android:id="@+id/text_master_water_ideal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:text="Goal(Litres)"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_master_water_your"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:singleLine="true"
        android:text="Consumed(Litres)"
        android:textAlignment="center"
        android:textStyle="bold" />

</LinearLayout>