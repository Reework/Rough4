<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearRecyHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardElevation="@dimen/_5sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_groupname"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:background="@color/haldi"
            style="@style/TextStyle.CoolveticaRegular"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/linChildView"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:background="@drawable/squarebtn_news"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Test Name"
                    android:textColor="@color/colorPremiumBlack"
                    android:gravity="center"

                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Value"
                    android:textColor="@color/colorPremiumBlack"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Range"
                    android:textColor="@color/colorPremiumBlack"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Score"
                    android:textColor="@color/colorPremiumBlack"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remark"
                    android:textColor="@color/colorPremiumBlack"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>







        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyler_testlist"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/line_color"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:visibility="gone"
            android:background="@android:color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Fasting Suge"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Value"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Range"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""

                android:visibility="gone"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRemark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>




