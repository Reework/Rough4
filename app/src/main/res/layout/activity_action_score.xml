<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".reework.activity.MyPlansModule.activity.ActionScoreActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPremiumWhite">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="5dp"
                android:paddingEnd="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextStyle.CoolveticaRegular"
                android:layout_width="wrap_content"
                android:text="Action Score"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentEnd="true"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="5dp"
                android:paddingEnd="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            

            android:background="@drawable/bg_msg_white"

            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overall Completion"

                android:letterSpacing="0.1"
                style="@style/TextStyle.mulishsemibold"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_60sdp"
                android:layout_height="60dp"
                android:id="@+id/progress_circular_overall"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"

                android:background="@drawable/bkgr_white_circle"
                app:cpb_background_progressbar_color="#F3F6F8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progressbar_color="#FFBF67"
                app:cpb_progressbar_width="3dp" />
            <TextView
                android:id="@+id/txt_score_overall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burnt"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_grey_20"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_msg_white"

            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nutrition Plan"

                android:letterSpacing="0.1"
                style="@style/TextStyle.mulishsemibold"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_60sdp"
                android:layout_height="60dp"
                android:id="@+id/progress_circular_nutrition"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"

                android:background="@drawable/bkgr_white_circle"
                app:cpb_background_progressbar_color="#F3F6F8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progressbar_color="@color/colorGreyLight"
                app:cpb_progressbar_width="3dp" />
            <TextView
                android:id="@+id/txt_score_nutrition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burnt"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_grey_20"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_msg_white"

            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Plan"

                android:letterSpacing="0.1"
                style="@style/TextStyle.mulishsemibold"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_60sdp"
                android:layout_height="60dp"
                android:id="@+id/progress_circular_food"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"

                android:background="@drawable/bkgr_white_circle"
                app:cpb_background_progressbar_color="#F3F6F8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progressbar_color="@color/colorBlue"
                app:cpb_progressbar_width="3dp" />
            <TextView
                android:id="@+id/txt_score_food"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burnt"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_grey_20"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_msg_white"

            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suppliment Plan"

                android:letterSpacing="0.1"
                style="@style/TextStyle.mulishsemibold"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_60sdp"
                android:layout_height="60dp"
                android:id="@+id/progress_circular_supliment"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"

                android:background="@drawable/bkgr_white_circle"
                app:cpb_background_progressbar_color="#F3F6F8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progressbar_color="@color/dark_red"
                app:cpb_progressbar_width="3dp" />
            <TextView
                android:id="@+id/txt_score_suppliment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burnt"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_grey_20"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_msg_white"

            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lifestyle Plan"

                android:letterSpacing="0.1"
                style="@style/TextStyle.mulishsemibold"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_60sdp"
                android:layout_height="60dp"
                android:id="@+id/progress_circular_lifestyle"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"

                android:background="@drawable/bkgr_white_circle"
                app:cpb_background_progressbar_color="#F3F6F8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progressbar_color="@color/haldi"
                app:cpb_progressbar_width="3dp" />
            <TextView
                android:id="@+id/txt_score_lifestyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burnt"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_grey_20"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_msg_white"

            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cheat Plan"

                android:letterSpacing="0.1"
                style="@style/TextStyle.mulishsemibold"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_60sdp"
                android:layout_height="60dp"
                android:id="@+id/progress_circular_cheat"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"

                android:background="@drawable/bkgr_white_circle"
                app:cpb_background_progressbar_color="#F3F6F8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progressbar_color="@color/color_15"
                app:cpb_progressbar_width="3dp" />
            <TextView
                android:id="@+id/txt_score_cheat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score -"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_grey_20"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_msg_white"
            android:visibility="invisible"

            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lifestyle Plan"

                android:letterSpacing="0.1"
                style="@style/TextStyle.mulishsemibold"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_60sdp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"

                android:background="@drawable/bkgr_white_circle"
                app:cpb_background_progressbar_color="#F3F6F8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progressbar_color="#FFBF67"
                app:cpb_progressbar_width="3dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burnt"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_grey_20"
                android:padding="@dimen/_5sdp"

                android:textAlignment="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="13dp" />

        </LinearLayout>


    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>