<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    tools:context=".reework.reecoachmodule.activities.ReecoachDashBoardActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="@dimen/_120sdp">
        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="@dimen/_100sdp"
            android:src="@drawable/ic_profile_pic_bg"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"

            android:layout_height="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            style="@style/TextStyle.CoolveticaRegular"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/reecoachanem"
            android:textSize="@dimen/text_small"
            android:layout_below="@+id/img_pic"
            android:text="Sunit Thakur"/>

        <TextView
            android:layout_width="wrap_content"
            style="@style/TextStyle.CoolveticaRegular"
            android:text=" Logout "
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/squarebtn_select"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/square_redcolor"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_total_user"
                    android:layout_width="wrap_content"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:text="333"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_x_x_xlarge"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:text="Total Users"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:layout_below="@+id/txt_total_user"
                    android:textSize="@dimen/text_tiny"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"

            app:cardUseCompatPadding="true"

            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/squarebtn_unselect"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_Active"
                    android:layout_width="wrap_content"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:text="333"
                    android:textSize="@dimen/text_x_x_xlarge"
                    android:textStyle="bold"

                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:text="Active Users"
                    android:textAllCaps="true"

                    android:textColor="@color/white"
                    android:layout_below="@+id/txt_Active"
                    android:textSize="@dimen/text_tiny"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"

            app:cardUseCompatPadding="true"

            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/square_fff"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_Freezed"
                    android:layout_width="wrap_content"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:text="333"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_x_x_xlarge"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:text="Freezed Users"
                    android:textColor="@color/white"
                    android:layout_below="@+id/txt_Freezed"
                    android:textSize="@dimen/text_tiny"
                    android:textAllCaps="true"

                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"

            app:cardUseCompatPadding="true"

            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/squarebtn_blue"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_InActive"
                    android:layout_width="wrap_content"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:text="333"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_x_x_xlarge"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:text="InActive Users"
                    android:textColor="@color/white"
                    android:layout_below="@+id/txt_InActive"
                    android:textSize="@dimen/text_tiny"
                    android:textAllCaps="true"

                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardUseCompatPadding="true"

    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_myreeworker"
        android:layout_width="match_parent"
        android:background="@drawable/squarebtn_myreeworker"
        android:text="My Reeworker"
        android:textColor="@color/white"
        android:gravity="center"
        style="@style/TextStyle.CoolveticaRegular"
        android:layout_height="@dimen/_50sdp"/>

</androidx.cardview.widget.CardView>
</LinearLayout>