<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey_blue"
        android:padding="@dimen/size10">


        <TextView
            android:id="@+id/labelMedicineTitle"
            style="@style/TextStyle.CoolveticaRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Repeat Sleep"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:id="@+id/close_repeat_sleep_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_popup_cancel" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylr_repeat_sleep_list"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/txt_add_repeat_sleep"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="match_parent"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/size12"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:id="@+id/txt_add_repeat_sleep"
            android:textColor="@android:color/white"
            android:background="@drawable/bkgr_button_green"
            android:text="Submit"/>

    </RelativeLayout>

</LinearLayout>