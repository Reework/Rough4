<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_recipe"
    tools:context=".reework.activity.AnalysisModule.activity.food.CaloriesAnalysisFragment">



    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="5dp">

                <TextView
                    android:id="@+id/labelMyProgress1"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:background="@drawable/round_rect_green"
                    android:text=" Export "
                    android:padding="@dimen/size4"

                    android:textColor="@color/black_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/size5"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size5"
                    android:layout_marginBottom="@dimen/size5"


                    />
                <Spinner
                    android:id="@+id/spinner_Weight_Months"
                    style="@style/MySpinnerWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size5"
                    android:paddingRight="@dimen/spinner_padding_right"
                    android:prompt="@string/select_month"
                    android:visibility="visible" />






            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_white"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:weightSum="2">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2">






                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ing"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="0dp">

                        <Button
                            android:id="@+id/btn_weekly"

                            android:layout_width="match_parent"
                            android:layout_height="30dp"

                            android:background="@color/white_recipe"
                            android:text="Weekly"
                            android:textAllCaps="false"


                            android:textColor="@color/black_recipe"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="0dp">

                        <Button
                            android:id="@+id/btn_3months"

                            android:layout_width="match_parent"
                            android:layout_height="30dp"

                            android:background="@color/white"
                            android:text="3 Months"
                            android:textAllCaps="false"


                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2">




                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="0dp">

                        <Button
                            android:id="@+id/btn_6months"

                            android:layout_width="match_parent"
                            android:layout_height="30dp"

                            android:background="@color/white_recipe"
                            android:text="6 Months"
                            android:textAllCaps="false"


                            android:textColor="@color/black_recipe"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_nut"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"

                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="0dp">

                        <Button
                            android:id="@+id/btn_selectdate"

                            android:layout_width="match_parent"
                            android:layout_height="30dp"

                            android:background="@color/white"
                            android:text="Select Date"
                            android:textAllCaps="false"


                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>




                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">






                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_edit_text_box_border"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/txt_show_sleep_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size10"
                            android:text="From Date"
                            android:textColor="#99231F20"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:gravity="end"


                            android:src="@drawable/grey_date" />

                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_edit_text_box_border"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/txt_show_sleep_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size10"
                            android:text="To Date"
                            android:textColor="#99231F20"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="@dimen/size15"
                            android:src="@drawable/red_date" />

                    </RelativeLayout>




                </LinearLayout>






            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginBottom="@dimen/size10"

                android:layout_marginTop="@dimen/size10"
                android:layout_marginLeft="@dimen/size10">

                <RelativeLayout
                    android:id="@+id/txt_header"
                    android:background="@color/white"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size10"
                        android:layout_alignParentTop="true"
                        android:id="@+id/labelMyProgress"
                        style="@style/TextStyle.CoolveticaRegular"
                        android:background="@drawable/round_rect_green"
                        android:text=" Export "
                        android:padding="@dimen/size4"
                        android:visibility="gone"
                        android:textColor="@color/black_overlay"
                        />
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/sendicon"
                        android:id="@+id/img_send"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_15sdp"

                        android:layout_gravity="end"
                        />

                </RelativeLayout>









                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_sleep_date1"
                    android:background="@color/white"

                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_header">

                    <ImageView
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:visibility="gone"
                        android:src="@drawable/grey_date"/>

                    <TextView
                        android:id="@+id/txt_show_sleep_from1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size10"
                        android:text=""/>

                    <ImageView
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_marginLeft="@dimen/size15"
                        android:visibility="gone"
                        android:src="@drawable/red_date"/>

                    <TextView
                        android:id="@+id/txt_show_sleep_to1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size10"
                        android:text=""/>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"

                    android:layout_below="@+id/txt_header"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/layout_open"
                        android:layout_width="wrap_content"
                        android:visibility="visible"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/imgopen"
                            android:id="@+id/imgopen"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_gravity="end"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_close"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/imgclose"
                            android:layout_marginTop="5dp"
                            android:id="@+id/imgclose"
                            android:visibility="visible"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_gravity="end"
                            />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>



            <com.github.mikephil.charting.charts.LineChart
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:visibility="visible"
                android:layout_margin="@dimen/size10"
                android:background="@android:color/black"
                android:id="@+id/linegraph"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size10"
                        android:layout_marginTop="@dimen/size10"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/size2"

                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@color/mobikwik_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Burnt"
                                android:textSize="10sp"
                                android:layout_marginLeft="@dimen/size5"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/size5"


                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@color/mobikwik_blue_dark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Consumed"
                                android:textSize="10sp"
                                android:layout_marginLeft="@dimen/size5"

                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/size5"


                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@color/dark_grey_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/size5"
                                android:text="Net"

                                android:textColor="@android:color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/size5"

                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@color/haldi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scheduled"
                                android:textSize="10sp"
                                android:layout_marginLeft="@dimen/size5"

                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>


            </ScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>