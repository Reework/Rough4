<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F8"
    android:orientation="vertical">

    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/custom_toolbar_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recler_dots"
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="10"
            tools:listitem="@layout/lay_dots" />

        <LinearLayout
            android:id="@+id/ll_dots_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size15"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/size15"
            android:orientation="horizontal"
            android:visibility="visible">

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_weight="1"
                android:background="#00D5BC" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"


                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"


                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view7"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view8"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view9"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view10"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view11"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view12"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view13"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view14"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view15"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view16"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white">

        <ViewFlipper
            android:id="@+id/vp_health_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_bottom_health"
            android:layout_marginTop="@dimen/size26">

            <include layout="@layout/lay_basic_profile" />

            <include layout="@layout/lay_alcohol" />

            <include layout="@layout/lay_smoke" />

            <include layout="@layout/lay_tabcco" />

            <include layout="@layout/lay_stress" />

            <include layout="@layout/lay_medicalcondition" />

            <include layout="@layout/lay_foodalergy" />

            <include layout="@layout/lay_health_suppliment" />

            <include layout="@layout/lay_emotional_suffering" />

            <include layout="@layout/lay_self_motivator" />

            <include layout="@layout/lay_meal_discipline" />

            <include layout="@layout/lay_distracted_eating" />

            <include layout="@layout/lay_fastfood_consumption" />

            <include layout="@layout/lay_physical_activity_level" />

            <include layout="@layout/lay_bodyshape" />

            <include layout="@layout/lay_anyother_health" />


        </ViewFlipper>

        <LinearLayout
            android:id="@+id/ll_bottom_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:background="#F3F6F8"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/txt_back_slide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_box"
                android:fontFamily="@font/mulishregular"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Back"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/btn_next_slide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight="1"

                android:background="@drawable/bg_newdesign_btn"
                android:fontFamily="@font/mulishregular"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Next"
                android:textColor="@color/black" />

        </LinearLayout>

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGroup_sleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/dark_grey_blue"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/size8"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rd_button_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/sqare"
            android:button="@null"
            android:checked="true"
            android:text="Basic Profile"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/rd_button_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/sqare"
            android:button="@null"
            android:text="Health Profile"
            android:textColor="@color/white" />


    </RadioGroup>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_next"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bkgr_button_green_no_radius"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10"
                    android:gravity="center"
                    android:text="How can we help you?"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="@dimen/size10"


                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgHealthProgress_1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_prog_1" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@color/colorPremiumWhite" />

                    <ImageView
                        android:id="@+id/imgHealthProgress_2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_health_progress_2" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@color/colorPremiumWhite" />

                    <ImageView
                        android:id="@+id/imgHealthProgress_3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_health_progress_3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@color/colorPremiumWhite" />

                    <ImageView
                        android:id="@+id/imgHealthProgress_4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_health_progress_4" />
                </LinearLayout>

                <com.shamrock.reework.activity.reeworkerhealth.app.StepperIndicator
                    android:id="@+id/stepper_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="@dimen/size10"
                    android:visibility="gone"
                    app:stpi_circleColor="@color/white"
                    app:stpi_circleRadius="10dp"
                    app:stpi_lineColor="@color/line_grey_20"

                    app:stpi_showDoneIcon="true"
                    app:stpi_showStepNumberInstead="true"


                    app:stpi_stepCount="4" />

            </LinearLayout>

            <com.shamrock.reework.common.NonSwipeableViewPager
                android:id="@+id/vp_health_param"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@drawable/bkgr_button_green_no_radius"
            android:text="NEXT"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>