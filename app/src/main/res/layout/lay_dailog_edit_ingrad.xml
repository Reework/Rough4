<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:padding="@dimen/size10"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        style="@style/TextStyle.CoolveticaRegular"
        android:text="Update Ingradient"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinner_ingradeint"
        android:layout_width="match_parent"
        android:padding="@dimen/size10"

        style="@style/MySpinner"


        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size10"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_ingrad_qty"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_margin="@dimen/size5"
            android:padding="@dimen/size5"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_edit_text_box_border"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spinner_ingradeint_unit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/size5"

            android:padding="@dimen/size5"
            style="@style/MySpinner"

            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_update_recipe"
        android:layout_width="match_parent"
        style="@style/button_Style_cal"
        android:layout_margin="@dimen/size10"
        android:text="Submit"
        android:layout_height="wrap_content"/>



</LinearLayout>