<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sqaure_blue"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/_5sdp"
                android:background="@color/colorGreen1"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payment_status"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:text="   Paid  "
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:background="@drawable/squarebtn_newds"/>
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Rs. 50000"
                    android:layout_toRightOf="@+id/payment_status"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorRobinEggBlueLight"
                    />
                <LinearLayout
                    android:id="@+id/llll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"

                    android:layout_below="@+id/llll">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_2sdp"

                        android:padding="@dimen/_5sdp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/paymentmethod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"

                            android:letterSpacing="0.1"
                            style="@style/TextStyle.CoolveticaRegular"
                            android:textColor="@color/colorRobinEggBlueLight"
                            android:text="Wallet"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextStyle.CoolveticaRegular"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_tiny"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_3sdp"

                            android:text="Payment Method"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_2sdp"


                        android:padding="@dimen/_5sdp"
                        android:layout_weight="1.3">
                        <TextView
                            android:id="@+id/orderid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:singleLine="true"
                            android:letterSpacing="0.1"
                            style="@style/TextStyle.CoolveticaRegular"

                            android:textColor="@color/colorRobinEggBlueLight"
                            android:text="12 March 2020"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextStyle.CoolveticaRegular"
                            android:letterSpacing="0.1"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_3sdp"

                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_tiny"
                            android:text="Order Id"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="@dimen/_2sdp"

                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextStyle.CoolveticaRegular"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_tiny"
                            android:text="Transaction Date  :  "/>
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            style="@style/TextStyle.CoolveticaRegular"
                            android:textSize="@dimen/text_tiny"
                            android:textColor="@color/colorRobinEggBlueLight"
                            android:text="12 March 2020"/>










                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_2sdp"


                        android:padding="@dimen/_5sdp"
                        android:layout_weight="1.3">
                        <TextView
                            android:id="@+id/refrenceid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/_11sdp"

                            android:textColor="@color/colorRobinEggBlueLight"
                            android:text="12344552020"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextStyle.CoolveticaRegular"
                            android:letterSpacing="0.1"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"

                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_tiny"
                            android:text="Refrence ID"/>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>