<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F6F8"

    android:orientation="vertical">


   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_margin="@dimen/size8"
       android:visibility="gone"

       app:cardUseCompatPadding="true"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:background="@color/white"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:background="@color/line_color"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/size3"
                   android:layout_weight="0.6"
                   android:letterSpacing="0.1"
                   style="@style/TextStyle.CoolveticaRegular"
                   android:textColor="@android:color/black"
                   android:layout_margin="@dimen/size3"
                   android:text="Activity  "/>

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:visibility="invisible"
                   android:layout_marginEnd="@dimen/size8"
                   android:src="@drawable/ic_edit"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:visibility="gone"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/size3"
                   android:layout_weight="0.6"
                   android:letterSpacing="0.1"
                   style="@style/TextStyle.CoolveticaRegular"

                   android:textColor="@android:color/black"
                   android:layout_margin="@dimen/size3"
                   android:text="SubActivity  "/>

               <TextView
                   android:id="@+id/txt_repeat_subactivity_name"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/size3"
                   android:layout_margin="@dimen/size3"

                   android:textColor="@android:color/black"

                   android:text=" : test Running"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="@dimen/size8"
                   android:visibility="invisible"
                   android:src="@drawable/ic_edit"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/size3"
                   android:layout_weight="0.6"
                   android:letterSpacing="0.1"
                   style="@style/TextStyle.CoolveticaRegular"

                   android:textColor="@android:color/black"
                   android:layout_margin="@dimen/size3"
                   android:text="Duration"/>


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/size3"
                   android:layout_weight="0.6"
                   android:letterSpacing="0.1"
                   style="@style/TextStyle.CoolveticaRegular"
                   android:textColor="@android:color/black"
                   android:layout_margin="@dimen/size3"
                   android:text="Time"/>



           </LinearLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <Button
                       android:layout_width="wrap_content"
                       android:text="EDIT"
                       android:visibility="gone"
                       android:layout_height="wrap_content">

                   </Button>
               </LinearLayout>

           </RelativeLayout>

       </LinearLayout>
   </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_8sdp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_2sdp"
            android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_weight="1.3"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_activity"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitXY"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/lifestyle"/>




                </LinearLayout>



                <LinearLayout
                    android:layout_weight="0.7"
                    android:weightSum="3"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/txt_repeat_activity_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textStyle="bold"
                        android:fontFamily="@font/mulishbold"

                        android:layout_weight="1"
                        android:layout_alignParentStart="true"

                        android:textSize="@dimen/_11sdp"
                        android:textColor="@android:color/black"

                        android:text="Running"/>


                    <TextView
                        android:id="@+id/txt_repeat_activity_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        android:textColor="@android:color/black"

                        android:alpha="0.6"
                        android:textSize="@dimen/_11sdp"
                        android:layout_alignParentStart="true"
                        android:text="1 hour"/>


                    <TextView
                        android:id="@+id/txt_repeat_activity_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_11sdp"
                        android:alpha="0.6"

                        android:layout_alignParentStart="true"

                        android:text="12:30 PM"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"

                        android:gravity="center"

                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/btn_add_repeat_activity"
                        android:layout_width="wrap_content"
                        android:text="   ADD   "
                        android:background="@color/line_color"
                        android:padding="@dimen/size2"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"

                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"/>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:background="@drawable/bg_pink_button"
                        android:layout_margin="@dimen/size3"
                        android:id="@+id/lay_current"

                        android:layout_height="23dp">


                    <TextView
                        android:id="@+id/img_edit_repeat_activity_duration"

                        android:layout_width="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:textColor="#FFFFFF"
                        android:padding="3dp"

                        style="@style/TextStyle.mulishsemibold"
                        android:text="Edit"
                        android:gravity="center"
                        android:textSize="12dp"

                        android:layout_height="wrap_content"/>


                    </LinearLayout>

 <LinearLayout
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/size3"
                android:id="@+id/lay_edit"

                android:layout_height="23dp">
                    <TextView

                        android:id="@+id/img_edit_repeat_activity_time"
                        android:layout_width="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="@android:color/black"
                        android:padding="3dp"


                        style="@style/TextStyle.mulishsemibold"
                        android:gravity="center"
                        android:textSize="12dp"

                        android:layout_height="wrap_content"
                        />
 </LinearLayout>

                </LinearLayout>


</LinearLayout>




            </LinearLayout>








        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>