<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/line_color"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_margin="10dp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:gravity="center"
        android:letterSpacing="0.1"

        android:textSize="@dimen/text_tiny"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/linearCoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginLeft="@dimen/size40"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingLeft="10dp">
        <ImageView
            android:id="@+id/img_user_image_client"
            android:layout_width="@dimen/size40"
            android:layout_margin="@dimen/_5sdp"
            android:visibility="visible"
            android:src="@drawable/smile"
            android:layout_height="@dimen/size40"/>

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="wrap_content"
          android:orientation="vertical"
          android:paddingLeft="@dimen/_10sdp"
          android:background="@drawable/bg_msg_from_community"

          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/tvTimeCoach"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:layout_gravity="end"
              android:gravity="end"
              android:textColor="@color/white"
              android:textSize="10dp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/tvMsgCoach"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_small"
              android:textColor="@color/white"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="5dp"

              android:paddingBottom="5dp"
              />
      </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginRight="@dimen/size30"
        android:layout_marginEnd="@dimen/size30"
        android:background="@color/line_color"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/img_user_image"
            android:layout_width="@dimen/size40"
            android:layout_margin="@dimen/_5sdp"
            android:visibility="visible"
            android:src="@drawable/smile"
            android:layout_height="@dimen/size40"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            android:background="@drawable/bg_msg_white"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/gray"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvTimeUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textColor="@color/gray"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvMsgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>