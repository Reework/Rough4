            android:background="@drawable/bg_circle"

            android:layout_height="@dimen/_130sdp">

            <ImageView
                android:id="@+id/img_user_pic"
                android:layout_width="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="@dimen/size20"

                android:layout_height="@dimen/_60sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_below="@+id/img_user_pic"
                android:layout_marginTop="@dimen/size5"
                android:text="Sunit Thakur"
                android:id="@+id/name_usewr"
                style="@style/TextStyle.CoolveticaRegular"
                android:gravity="center"
                android:textSize="@dimen/text_large"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/txt_genger_new"
                android:layout_width="match_parent"
                android:layout_below="@+id/name_usewr"
                android:layout_marginTop="@dimen/size5"
                android:text="Age : 20 Years"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                />




        </RelativeLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/size10"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_reecoach_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:textStyle="bold"
                android:text="-"

                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginRight="@dimen/size10"
                android:layout_marginLeft="@dimen/size10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Reecoach"
                android:letterSpacing="0.1"
                android:textSize="@dimen/text_large"
                style="@style/TextStyle.CoolveticaRegular"
                android:textColor="@android:color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="@dimen/size96"
                android:layout_marginEnd="@dimen/size96"
                android:background="@color/colorGreen3"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="@dimen/size5"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5"
                    android:text="-"

                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_marginLeft="@dimen/size10"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="BMI"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/text_small"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:textColor="@android:color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginStart="@dimen/size20"
                    android:layout_marginEnd="@dimen/size20"
                    android:background="@color/colorGreen3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
