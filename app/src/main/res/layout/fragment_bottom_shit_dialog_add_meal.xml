<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F3F6F8"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/custom_toolbar"
        android:background="#F3F6F8"


        layout="@layout/custom_toolbar_grey" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_marginRight="@dimen/_15sdp"
      android:layout_marginLeft="@dimen/_15sdp"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"

          android:layout_above="@+id/llbottomfood"
          android:orientation="vertical"
          >




          <RelativeLayout
              android:layout_width="match_parent"

              android:visibility="gone"
              android:background="@color/black"
              android:layout_height="@dimen/_150sdp">
              <ImageView
                  android:id="@+id/img_close_food_dailog"
                  android:layout_width="@dimen/_35sdp"
                  android:layout_height="@dimen/_25sdp"
                  android:layout_margin="@dimen/_5sdp"
                  android:padding="@dimen/_3sdp"
                  android:visibility="gone"
                  android:scaleType="fitXY"
                  android:layout_alignParentStart="true"
                  android:src="@drawable/ic_back_food"/>
              <ImageView
                  android:id="@+id/img_fadd_recipe"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"

                  android:alpha="0.6"





                  android:src="@drawable/foodnew"
                  android:scaleType="fitXY"
                  />
              <TextView
                  android:id="@+id/txt_recipe"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  android:layout_marginLeft="@dimen/_10sdp"
                  android:padding="@dimen/_3sdp"
                  android:layout_marginBottom="@dimen/_15sdp"
                  android:textSize="@dimen/text_large"
                  android:textColor="@color/white"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentEnd="true"
                  />

          </RelativeLayout>
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:cardElevation="0dp"
              android:layout_marginTop="@dimen/_10sdp"
              app:cardCornerRadius="@dimen/_10sdp"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginEnd="@dimen/_5sdp">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_160sdp"
                  >


                  <ImageView
                      android:id="@+id/img_add_recipe"

                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_200sdp"
                      android:scaleType="fitXY"
                      android:layout_alignParentTop="true"

                      android:src="@drawable/deafault_recipe"/>



                  <ImageView
                      android:id="@+id/ivplay"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:padding="@dimen/_5sdp"
                      android:alpha="0.8"
                      android:visibility="invisible"
                      android:layout_centerInParent="true"

                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_20sdp"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:layout_marginRight="@dimen/_10sdp"
                      android:layout_marginBottom="@dimen/_10sdp"
                      android:src="@drawable/youtube" />


                  <ImageView
                      android:id="@+id/ivShare"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:padding="@dimen/_5sdp"
                      android:alpha="0.8"
                      android:visibility="gone"

                      android:background="@android:color/holo_blue_light"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentEnd="true"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_20sdp"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:layout_marginRight="@dimen/_10sdp"
                      android:layout_marginBottom="@dimen/_10sdp"
                      android:src="@drawable/share" />
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/text_tiny"
                      android:background="@color/black"
                      android:layout_alignParentBottom="true"
                      android:alpha="0.4"
                      android:orientation="vertical">
                      <TextView
                          android:id="@+id/tvItemName"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          style="@style/TextStyle.mulishbold"
                          android:singleLine="true"
                          android:ellipsize="marquee"
                          android:marqueeRepeatLimit="marquee_forever"
                          android:textColor="@android:color/white"
                          android:textSize="@dimen/text_large"
                          android:layout_marginStart="@dimen/_10sdp"
                          android:layout_marginEnd="@dimen/_10sdp"
                          android:text="-"/>
                      <TextView
                          android:id="@+id/txt_cal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          style="@style/TextStyle.mulishregular"
                          android:textColor="@android:color/white"
                          android:layout_marginBottom="@dimen/_5sdp"

                          android:layout_marginStart="@dimen/_10sdp"

                          android:text=""/>
                  </LinearLayout>
              </RelativeLayout>

          </androidx.cardview.widget.CardView>


          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_10sdp"
              android:textStyle="bold"
              style="@style/TextStyle.CalibriLight"
              android:textSize="@dimen/text_small"

              android:textColor="@color/black"
              android:text="Pick the Quantity"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginTop="@dimen/_10sdp"
              android:orientation="horizontal">

              <com.yanzhenjie.wheel.WheelView
                  android:id="@+id/wheal_list"
                  android:layout_width="wrap_content"
                  android:background="@color/white"
                  android:visibility="gone"
                  android:layout_centerVertical="true"
                  android:layout_alignParentStart="true"
                  android:layout_margin="@dimen/_20sdp"
                  android:layout_height="@dimen/_70sdp"/>

              <EditText
                  android:id="@+id/edt_food_quantity"
                  android:layout_width="wrap_content"
                  android:background="@drawable/quantity_selector"
                  android:layout_centerVertical="true"
                  android:layout_alignParentStart="true"
                  android:hint="  Enter quantity  "
                  android:inputType="numberDecimal"
                  android:gravity="center"
                  android:layout_margin="@dimen/_20sdp"
                  android:layout_height="@dimen/_35sdp"/>
              <com.yanzhenjie.wheel.WheelView
                  android:id="@+id/wheal_list_uom"
                  android:layout_width="@dimen/_120sdp"
                  android:background="@color/white"
                  android:layout_margin="@dimen/_20sdp"
                  android:layout_alignParentEnd="true"
                  android:layout_height="@dimen/_50sdp"/>

          </RelativeLayout>

          <TextView
              android:id="@+id/tfxt_gram_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:layout_marginLeft="@dimen/_10sdp"
              style="@style/TextStyle.CalibriLight"
              android:textStyle="bold"
              android:visibility="gone"
              android:textSize="@dimen/text_small"
              android:text="  Nutrition Information per 100 gm"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_marginEnd="@dimen/_10sdp"
              android:layout_marginTop="@dimen/_10sdp"
              android:orientation="vertical"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/txt_gram_header"
                  android:layout_width="match_parent"
                  android:text="Nutrition per 100 gram"
                  android:fontFamily="@font/mulishbold"
                  android:textColor="@color/black"
                  android:textStyle="bold"

                  android:layout_height="wrap_content"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/_5sdp"
                  android:layout_height="wrap_content">
                  <RelativeLayout
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:background="@drawable/bg_rounded_corner"
                      android:padding="@dimen/_10sdp"
                      android:layout_marginEnd="@dimen/_5sdp"
                      android:layout_height="wrap_content">
                      <ImageView

                          android:layout_width="@dimen/_30sdp"
                          android:layout_height="@dimen/_30sdp"
                          android:padding="@dimen/_5sdp"
                          android:background="#F3F6F8"
                          android:layout_centerVertical="true"
                          android:src="@drawable/protein"/>
                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_centerVertical="true"
                          android:orientation="vertical"
                          android:layout_marginStart="@dimen/_40sdp"

                          android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Protein"
                              android:alpha="0.6"

                              android:textColor="@android:color/black"
                              android:layout_centerVertical="true"
                              style="@style/TextStyle.mulishmedium"/>
                          <TextView
                              android:id="@+id/txt_protin_value"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentEnd="true"
                              android:textColor="@android:color/black"
                              android:layout_centerVertical="true"
                              android:text="0"/>
                      </LinearLayout>

                  </RelativeLayout>
                  <RelativeLayout
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:background="@drawable/bg_rounded_corner"
                      android:padding="@dimen/_10sdp"
                      android:layout_height="wrap_content">
                      <ImageView

                          android:layout_width="@dimen/_30sdp"
                          android:layout_height="@dimen/_30sdp"
                          android:padding="@dimen/_5sdp"
                          android:background="#F3F6F8"
                          android:layout_centerVertical="true"
                          android:src="@drawable/fibre"/>
                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_centerVertical="true"
                          android:orientation="vertical"
                          android:layout_marginStart="@dimen/_40sdp"

                          android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Fibre"
                              android:alpha="0.6"

                              android:textColor="@android:color/black"
                              android:layout_centerVertical="true"
                              style="@style/TextStyle.mulishmedium"/>
                          <TextView
                              android:id="@+id/txt_fibre_value"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentEnd="true"
                              android:textColor="@android:color/black"
                              android:layout_centerVertical="true"
                              android:text="0"/>
                      </LinearLayout>

                  </RelativeLayout>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
                  <RelativeLayout
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:background="@drawable/bg_rounded_corner"
                      android:padding="@dimen/_10sdp"
                      android:layout_marginEnd="@dimen/_5sdp"
                      android:layout_height="wrap_content">
                      <ImageView

                          android:layout_width="@dimen/_30sdp"
                          android:layout_height="@dimen/_30sdp"
                          android:padding="@dimen/_5sdp"
                          android:layout_centerVertical="true"
                          android:background="#F3F6F8"
                          android:src="@drawable/fat"/>
                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_centerVertical="true"
                          android:orientation="vertical"
                          android:layout_marginStart="@dimen/_40sdp"

                          android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Fat"
                              android:alpha="0.6"

                              android:textColor="@android:color/black"
                              android:layout_centerVertical="true"
                              style="@style/TextStyle.mulishmedium"/>
                          <TextView
                              android:id="@+id/txt_fat_value"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentEnd="true"
                              android:textColor="@android:color/black"
                              android:layout_centerVertical="true"
                              android:text="0"/>
                      </LinearLayout>

                  </RelativeLayout>
                  <RelativeLayout
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:background="@drawable/bg_rounded_corner"
                      android:padding="@dimen/_10sdp"
                      android:layout_height="wrap_content">
                      <ImageView

                          android:layout_width="@dimen/_30sdp"
                          android:layout_height="@dimen/_30sdp"
                          android:padding="@dimen/_5sdp"
                          android:background="#F3F6F8"
                          android:layout_centerVertical="true"
                          android:src="@drawable/carb"/>
                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_centerVertical="true"
                          android:orientation="vertical"
                          android:layout_marginStart="@dimen/_40sdp"

                          android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Carbs"
                              android:alpha="0.6"

                              android:textColor="@android:color/black"
                              android:layout_centerVertical="true"
                              style="@style/TextStyle.mulishmedium"/>
                          <TextView
                              android:id="@+id/txt_carb_value"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentEnd="true"
                              android:textColor="@android:color/black"
                              android:layout_centerVertical="true"
                              android:text="0"/>
                      </LinearLayout>

                  </RelativeLayout>
              </LinearLayout>
          </LinearLayout>





          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/recyler_quantity"
              android:layout_width="@dimen/_100sdp"
              android:layout_marginTop="@dimen/_10sdp"
              android:orientation="vertical"
              android:visibility="gone"
              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_height="@dimen/_90sdp"/>





      </LinearLayout>
      <LinearLayout
          android:id="@+id/llbottomfood"
          android:layout_width="match_parent"
          android:layout_alignParentBottom="true"
android:orientation="vertical"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/btn_data_to_meal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/_10sdp"
              android:layout_margin="@dimen/_5sdp"

              android:text="Add Food"
              android:textColor="@color/white"
              style="@style/button_Style_newdesign"
              android:textStyle="bold"
              android:textSize="@dimen/text_normal"

              android:gravity="center"
              android:textAllCaps="true"
              android:layout_gravity="end"/>
          <View
              android:layout_width="match_parent"
              android:visibility="invisible"
              android:layout_height="@dimen/_10sdp"/>

      </LinearLayout>

  </RelativeLayout>

</LinearLayout>