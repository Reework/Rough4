<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_mediceine"
        android:fadeScrollbars="false"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPremiumWhite"
            android:orientation="vertical"
            android:padding="20dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:id="@+id/labelMedicineTitle"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Water Intake"
                    android:textColor="@color/colorPremiumBlack"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/close_add_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_popup_cancel" />
            </RelativeLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/imgglass"
                        android:layout_width="@dimen/_30sdp"
                        android:src="@drawable/wateranimation"
                        android:layout_alignParentStart="true"

                        android:layout_height="@dimen/_40sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/imgglass"
                        android:layout_centerVertical="true"

                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/mulishsemibold"
                            android:textColor="@color/black"
                            android:text="Water"
                            android:textStyle="bold"
                            android:textSize="19dp"

                            android:layout_marginStart="@dimen/size10"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/waterheader"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/mulishsemibold"
                            android:textColor="@color/black"
                            android:text="Water"
                            android:alpha="0.6"
                            android:textSize="@dimen/text_small"
android:textStyle="bold"
                            android:layout_marginStart="@dimen/size10"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/waterheader1"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/mulishsemibold"
                            android:textColor="@color/black"
                            android:text="Water"
                            android:alpha="0.6"
                            android:textSize="@dimen/text_small"
android:textStyle="bold"
                            android:layout_marginStart="@dimen/size10"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                </RelativeLayout>
                <Spinner
                    android:id="@+id/spinner_add_uom_water"
                    style="@style/MySpinnerWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size5"
                    android:paddingRight="@dimen/spinner_padding_right"
                    android:prompt="@string/select_monthss"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick the Quantity"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulishsemibold"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:textAppearance="?android:attr/textAppearanceSmall" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size8"
                    android:layout_weight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">






                    </LinearLayout>
                </LinearLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">






                    </LinearLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <com.yanzhenjie.wheel.WheelView
                        android:id="@+id/wheal_list_uom"
                        android:layout_width="@dimen/_120sdp"

                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/size10"
                        android:layout_toLeftOf="@+id/img_minus_water"

                        android:layout_height="@dimen/_100sdp"/>



                    <EditText
                        android:id="@+id/edt_add_actual_water"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"

                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/quantity_selector"

                        android:gravity="center"
                        android:hint="Quantity"
android:textSize="14dp"
                        android:layout_toLeftOf="@+id/img_plus_water"
                        android:layout_marginTop="60dp"
                        android:layout_alignParentEnd="true"
                        android:inputType="numberDecimal"
                        android:maxLength="20" />

                    <ImageView
                        android:id="@+id/img_plus_water"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        android:textColor="@android:color/black"

                        android:background="@drawable/ic_add_water"
                        android:layout_marginRight="@dimen/size10"
                        android:layout_toLeftOf="@+id/img_minus_water"

                        />


                    <ImageView
                        android:id="@+id/img_minus_water"
                        android:layout_width="40dp"
                        android:visibility="gone"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@android:color/black"
                        android:textSize="35dp"
                        android:background="@drawable/ic_indeterminate_check_box_black_24dp"

                        android:layout_alignParentRight="true" />


                </RelativeLayout>




            </LinearLayout>
































            <Button
                android:id="@+id/btn_add_water"

                android:layout_alignParentRight="true"
                style="@style/button_Style_newdesign"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:layout_marginLeft="@dimen/size2"
                android:layout_marginRight="@dimen/size2"
                android:layout_marginTop="@dimen/size10"
                android:layout_above="@+id/dummyview"
                android:layout_marginBottom="@dimen/size10"


                android:text="Add"
                />


        </LinearLayout>

    </ScrollView>



</RelativeLayout>