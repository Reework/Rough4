<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMyPlan_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/bg_my_plan_right_mark_selector" />

        <TextView
            android:id="@+id/textView_MyPlan_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="07:15"
            android:textColor="@color/colorPremiumBlack"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/textView_MyPlan_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="Post Wakeup"
            android:textColor="@color/colorPremiumBlack"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgMyPlan_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/bg_my_plan_active_selector" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLay_MyPlan_Todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>