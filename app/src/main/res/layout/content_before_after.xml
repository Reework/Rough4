<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

android:layout_marginTop="60dp"
    android:orientation="vertical"
    tools:showIn="@layout/activity_before_after"
    android:layout_marginBottom="80dp"
    android:layout_height="match_parent">




        <ScrollView
            android:scrollbars="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_date_selects"
                android:layout_marginBottom="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Before picture  "
                            android:id="@+id/ffff"
                            android:textColor="@color/colorPremiumBlack"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold" />



                        <ImageView
                            android:id="@+id/ivUploadBefore"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ffff"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:src="@drawable/upp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentEnd="true"
                            >
                            <ImageView
                                android:id="@+id/img_comparebefore"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:visibility="gone"
                                android:src="@drawable/bar"/>
                            <TextView
                                android:id="@+id/txt_comparebefore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Compare"
                                android:gravity="center"

                                android:letterSpacing="0.1"
                                android:textColor="#00D5BC"
                                style="@style/TextStyle.CoolveticaRegular"
                                android:textSize="@dimen/text_small"/>

                        </LinearLayout>


                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBefore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F5F6F8"
android:layout_marginTop="5dp"
                        android:divider="@color/colorGreyLight_BgListView"
                        android:dividerHeight="5dp"
                        android:overScrollMode="never"

                        android:scrollbars="horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:padding="@dimen/_5sdp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="After picture  "
                            android:id="@+id/hhgg"
                            android:textColor="@color/colorPremiumBlack"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivUploadAfter"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/hhgg"
                            android:layout_marginEnd="10dp"
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/upp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentEnd="true"
                            >
                            <ImageView
                                android:id="@+id/img_compareafter"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:visibility="gone"
                                android:src="@drawable/bar"/>
                            <TextView
                                android:id="@+id/txt_compareafter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Compare"
                                android:gravity="center"

                                android:letterSpacing="0.1"
                                android:textColor="#00D5BC"
                                style="@style/TextStyle.CoolveticaRegular"
                                android:textSize="@dimen/text_small"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAfter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginTop="5dp"



                        />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>




</LinearLayout>