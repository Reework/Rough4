<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/textBlood_Percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="16.5%"
        android:textSize="@dimen/text_small"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgView_PDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_pdf_view" />

    <TextView
        android:id="@+id/textBlood_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/imgView_PDF"
        android:layout_toStartOf="@id/imgView_PDF"
        android:paddingEnd="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingStart="5dp" android:text="19/12/1991"
        android:textColor="@color/colorPremiumBlack"
        android:textSize="@dimen/text_small"
        android:textStyle="bold" />

</RelativeLayout>