<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_mediceine"
        android:fadeScrollbars="false"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPremiumWhite"
            android:orientation="vertical"
            android:padding="20dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/labelMedicineTitle"
                    style="@style/TextStyle.CoolveticaRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Weight"
                    android:textColor="@color/colorPremiumBlack"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:id="@+id/close_slepp_histoy_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_popup_cancel" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"

                android:text="Weight"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/edt_schedule_wt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"

                android:clickable="false"
                android:enabled="false"

                android:inputType="textPersonName"
                android:maxLength="20" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Weight"
                    android:textAppearance="?android:attr/textAppearanceSmall" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size8"
                    android:layout_weight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">






                    </LinearLayout>
                </LinearLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">






                    </LinearLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edt_new_wt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_toLeftOf="@+id/img_plus_water"

                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/size5"

                        android:inputType="number"
                        android:maxLength="20" />

                    <ImageView
                        android:id="@+id/img_plus_water"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        android:textColor="@android:color/black"

                        android:background="@drawable/ic_add_water"
                        android:layout_marginRight="@dimen/size10"
                        android:layout_toLeftOf="@+id/img_minus_water"

                        />
                    <ImageView
                        android:id="@+id/img_minus_water"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:textColor="@android:color/black"
                        android:textSize="35dp"
                        android:background="@drawable/ic_indeterminate_check_box_black_24dp"

                        android:layout_alignParentRight="true" />


                </RelativeLayout>




            </LinearLayout>
































            <Button
                android:id="@+id/btn_update_water_hitostory"

                android:layout_alignParentRight="true"
                style="@style/button_Style_cal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size2"
                android:layout_marginLeft="@dimen/size2"
                android:layout_marginRight="@dimen/size2"
                android:layout_marginTop="@dimen/size10"
                android:layout_above="@+id/dummyview"
                android:layout_marginBottom="@dimen/size10"


                android:text="Update"
                />


        </LinearLayout>

    </ScrollView>



</RelativeLayout>