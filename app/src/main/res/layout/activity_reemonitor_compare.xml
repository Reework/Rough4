<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/custom_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comparison"
        android:textColor="@color/white"
        android:background="@drawable/bkgr_button_green_no_radius"
        style="@style/TextStyle.CoolveticaRegular"
        android:padding="@dimen/size10"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey_blue"
        >
        <RadioGroup
            android:id="@+id/radioGroup_sl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/size8"
            android:padding="@dimen/size3"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/txt_bca"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="@dimen/size15"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginRight="15dp"
                android:background="@drawable/sqare"
                android:button="@null"
                android:checked="true"
                android:text="  BCA  " />

            <RadioButton
                android:id="@+id/txt_patho"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                android:layout_marginRight="15dp"
                android:background="@drawable/sqare"
                android:button="@null"
                android:text="Pathology " />

            <RadioButton
                android:id="@+id/txt_reescore"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                android:layout_marginRight="15dp"
                android:background="@drawable/sqare"
                android:button="@null"
                android:text="REEscore " />







        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_choosedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_below="@+id/img_close"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"


                style="@style/TextStyle.CoolveticaRegular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="Weight History"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_sleep_date"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/size10"
                android:layout_below="@+id/txt_header">

                <ImageView
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:src="@drawable/grey_date"/>

                <TextView
                    android:id="@+id/txt_show_sleep_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="01-05-020"/>

                <ImageView
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginLeft="@dimen/size15"
                    android:src="@drawable/red_date"/>

                <TextView
                    android:id="@+id/txt_show_sleep_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/size10"
                    android:text="01-05-020"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"

                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size8"
                    >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size5"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:text="From Date :"
                                android:textColor="@android:color/black"
                                android:padding="@dimen/size5"
                                android:textStyle="bold"
                                >




                            </TextView>

                            <TextView
                                android:id="@+id/txt_weight_date_from"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/size5"
                                android:background="@drawable/rect_shape" />






                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size5"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:text="To Date:"
                                android:textColor="@android:color/black"
                                android:padding="@dimen/size5"
                                android:textStyle="bold"
                                android:gravity="start"
                                >




                            </TextView>

                            <TextView
                                android:id="@+id/txt_weight_date_to"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/size5"
                                android:background="@drawable/rect_shape" />






                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/btn_show_weight_history"
                    android:layout_width="wrap_content"


                    android:background="@color/line_color"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/dummyview"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size2"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginRight="@dimen/size2"
                    android:layout_marginBottom="@dimen/size10"
                    android:gravity="center"
                    android:elevation="@dimen/_3sdp"
                    android:padding="@dimen/size6"


                    android:text="  View History  " />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/size5"
                android:background="@color/line_grey_20"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_weight_header"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/line_color"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    android:padding="@dimen/size5"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txt_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5"
                    android:text="Weight(Kg)"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:padding="@dimen/_5sdp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size5"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_report_compare"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>

</LinearLayout>