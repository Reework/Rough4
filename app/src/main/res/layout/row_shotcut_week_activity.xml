<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/size5"
        android:background="@drawable/bg_edit_text_box_border"

        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_activity_shotcut_name"
            android:layout_width="match_parent"
            android:layout_alignParentStart="true"
            android:padding="@dimen/size5"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/black"

            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center_vertical"

            android:layout_margin="@dimen/size5"
            style="@style/TextStyle.CoolveticaRegular"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_activxity_shotcut_add"
            android:layout_width="wrap_content"
            android:padding="@dimen/size5"
            android:text="  ADD  "
            android:visibility="gone"
            android:elevation="@dimen/size5"

            android:layout_margin="@dimen/size10"
            android:background="@color/line_color"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/size15"
            android:layout_alignParentEnd="true"
            style="@style/TextStyle.CalibriLight"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="@dimen/size5"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/black_overlay"
            android:textStyle="bold"
            android:text="Time : "

            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/size10"
            android:layout_toLeftOf="@+id/txt_activity_shotcut_add"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_edit_weekyl_shot_cut_time"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/size5"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/black"
                android:text="Time : "
                android:textStyle="bold"
                android:drawableEnd="@drawable/ic_edit"

                android:marqueeRepeatLimit="marquee_forever"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/size10"
                android:layout_toLeftOf="@+id/txt_activity_shotcut_add"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/txt_activity_shotcut_add"
                android:layout_width="wrap_content"
                android:padding="@dimen/size5"
                android:text="  ADD  "
                android:elevation="@dimen/size5"

                android:layout_margin="@dimen/size10"
                android:background="@color/line_color"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/size15"
                android:layout_alignParentEnd="true"
                style="@style/TextStyle.CalibriLight"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>