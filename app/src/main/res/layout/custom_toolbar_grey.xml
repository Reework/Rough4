<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#F3F6F8"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextStyle.CoolveticaRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgLeft"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/colorPremiumBlack"
            android:textSize="21sp" />


        <RelativeLayout
            android:id="@+id/counterValuePanel"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:visibility="invisible"
                android:background="@drawable/ic_notification" />

            <TextView
                android:id="@+id/count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/ivBell"
                android:layout_centerInParent="true"
                android:layout_marginLeft="-12dp"
                android:layout_marginTop="-8dp"
                android:layout_toRightOf="@+id/ivBell"
                android:visibility="gone"
                android:background="@drawable/rounded_textview_white"
                android:gravity="center"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="@dimen/text_tiny" />
        </RelativeLayout>



    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>