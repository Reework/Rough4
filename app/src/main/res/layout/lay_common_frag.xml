<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/size10"
            android:layout_margin="@dimen/_5sdp"
            app:cardElevation="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size10">

                <LinearLayout
                    android:background="@drawable/app"
                    android:id="@+id/img_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:textSize="@dimen/_16sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/size20"
                        android:text="Health and Wellness"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/coolvetica_regular"
                        android:id="@+id/txt_plan_name"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/txt_plan_description"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/coolvetica_regular"
                        android:text="It will provide personal willness score which is a scientic approach.any defiecieny is this score will be provided with advisores"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_minus20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_background"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/size5"
                    android:id="@+id/ll_amount"
                    android:background="@drawable/round_rect"
                    android:src="@mipmap/ic_launcher" >
                    <TextView
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/img_background"
                        android:padding="@dimen/size5"
                        android:text="Rs.300"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold"
                        android:id="@+id/txt_plan_amount"
                        android:background="@drawable/round_rect_green"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>

                <ListView
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lst_plan_features"
                    android:layout_above="@+id/btn_submit_payment"
                    android:layout_below="@+id/ll_amount"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/button_Style_cal"
                    android:padding="@dimen/size10"
                    android:id="@+id/btn_submit_payment"
                    android:layout_marginLeft="@dimen/size30"
                    android:layout_marginRight="@dimen/size30"
                     android:layout_marginBottom="@dimen/size20"
                    android:text="Payment"

                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>





</LinearLayout>