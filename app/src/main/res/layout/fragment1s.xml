<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".reework.activity.reeworkerhealth.app.Fragment1">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/customOption1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/white"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size15"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/size15"
            android:orientation="horizontal"
            android:visibility="visible">

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_weight="1"
                android:background="#00D5BC" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"


                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"


                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view7"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view8"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view9"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />

            <View
                android:id="@+id/view10"
                android:layout_width="0dp"
                android:layout_height="5sp"
                android:layout_marginStart="@dimen/_7sdp"

                android:layout_weight="1"
                android:background="#EAEAEC" />




        </LinearLayout>

        <ViewFlipper
            android:id="@+id/vp_health_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_bottom_health"
            android:layout_marginTop="@dimen/size26">

            <include layout="@layout/lay_questionare1" />

            <include layout="@layout/lay_questionare2" />

            <include layout="@layout/lay_questionare3" />

            <include layout="@layout/lay_questionare4" />

            <include layout="@layout/lay_questionare5" />

            <include layout="@layout/lay_questionare6" />

            <include layout="@layout/lay_questionare7" />

            <include layout="@layout/lay_questionare8" />

            <include layout="@layout/lay_questionare9" />

            <include layout="@layout/lay_questionare10" />








        </ViewFlipper>















        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:text="Weight"
                android:textColor="@color/black" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:inputType="numberDecimal" />


                -

                <RadioGroup
                    android:id="@+id/rb_grp_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="KG"></RadioButton>

                    <RadioButton
                        android:id="@+id/rb_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pound"></RadioButton>

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>


        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:text="Height"
                android:textColor="@color/black" />


            -

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                -

                <RadioGroup
                    android:id="@+id/rb_grp_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_cm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Cm" />

                    <RadioButton
                        android:id="@+id/rb_ft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feet and Inches"></RadioButton>

                </RadioGroup>


                -

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_hight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="height in cm"
                        android:inputType="numberDecimal" />


                    -

                    <LinearLayout
                        android:id="@+id/ll_main_fi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        -

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/size5"
                                android:layout_weight="0.5"
                                android:hint="Feet : "
                                android:inputType="numberDecimal"
                                android:padding="@dimen/size5" />

                            <EditText
                                android:id="@+id/edt_feet"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/size5"
                                android:layout_weight="1"
                                android:background="@drawable/bg_edit_text_box_border"
                                android:inputType="numberDecimal"
                                android:padding="@dimen/size5" />

                        </LinearLayout>


                        -

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/size5"
                                android:layout_weight="0.5"
                                android:hint="Inches : "
                                android:inputType="numberDecimal"
                                android:padding="@dimen/size5" />

                            <EditText
                                android:id="@+id/edt_inch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/size5"
                                android:layout_weight="1"
                                android:background="@drawable/bg_edit_text_box_border"
                                android:inputType="numberDecimal"
                                android:padding="@dimen/size5" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
android:layout_marginBottom="5dp"
      >

        <TextView
            android:id="@+id/txt_back_slide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_gray_box"
            android:fontFamily="@font/mulishregular"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Back"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/btn_next_slide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_weight="1"

            android:background="@drawable/bg_newdesign_btn"
            android:fontFamily="@font/mulishregular"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Next"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>