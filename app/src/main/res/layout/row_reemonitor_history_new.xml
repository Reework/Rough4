<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:padding="@dimen/size3"
            android:layout_marginLeft="@dimen/size8"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:marqueeRepeatLimit="marquee_forever"            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

<!--        <TextView-->
<!--            android:id="@+id/txt_testname"-->
<!--            android:layout_width="match_parent"-->
<!--            android:padding="@dimen/size3"-->

<!--            android:layout_marginLeft="@dimen/size8"-->
<!--            android:textColor="@android:color/black"-->
<!--            style="@style/TextStyle.CoolveticaRegular"-->

<!--            android:layout_alignParentStart="true"-->
<!--            android:layout_height="wrap_content"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
           android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:padding="@dimen/size3"

                android:textColor="#99231F20"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/size8"
android:textSize="10dp"
                android:layout_toLeftOf="@+id/txt_delete_reemonitor"

                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_testvalue"
                android:layout_width="match_parent"
                android:padding="@dimen/size3"
                android:textSize="10dp"

                android:textColor="#99231F20"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/size8"

                android:layout_toLeftOf="@+id/txt_delete_reemonitor"

                android:layout_height="wrap_content"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"

android:gravity="end"

                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="39dp"
                android:background="@drawable/bg_green_button"
                android:layout_margin="@dimen/size3"
                android:id="@+id/lay_edit"

                android:layout_height="23dp">

                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:textColor="@color/black_recipe"
android:padding="3dp"

                    style="@style/TextStyle.mulishsemibold"
                    android:text="Edit"
                    android:gravity="center"
                    android:textSize="12dp"

                    android:layout_height="wrap_content"/>
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:gravity="center"

                android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="55dp"
                android:background="@drawable/bg_pink_button"
                android:layout_margin="@dimen/size3"
                android:id="@+id/lay_current"

                android:layout_height="23dp">
                <TextView
                    android:id="@+id/txt_delete"
                    android:layout_width="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:textColor="@color/black_recipe"
                    android:padding="3dp"

                    style="@style/TextStyle.mulishsemibold"
                    android:text="Delete"
                    android:gravity="center"
                    android:textSize="12dp"

                    android:layout_height="wrap_content"/>
            </LinearLayout>

            </LinearLayout>


        </LinearLayout>











    </LinearLayout>

<!--    <TextView-->
<!--        android:id="@+id/txt_remark"-->
<!--        android:layout_width="match_parent"-->
<!--        android:padding="@dimen/size5"-->
<!--        android:layout_marginTop="@dimen/size8"-->
<!--        android:textColor="@android:color/black"-->
<!--        android:textStyle="bold"-->

<!--        android:layout_marginLeft="@dimen/size8"-->

<!--        android:layout_height="wrap_content"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/size3"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_edit_reemonitor12"
                android:layout_width="wrap_content"
                android:text="   Edit   "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/txt_delete_reemonitor12"
                android:layout_margin="@dimen/size3"
                android:background="@color/colorPrimaryDark"
                android:padding="@dimen/size8"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_delete_reemonitor12"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="  Delete  "
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/size3"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:layout_margin="@dimen/size3"
                android:background="@color/dark_red"
                android:padding="@dimen/size8"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>