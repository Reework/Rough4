<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    android:layout_marginTop="@dimen/size10"
    app:cardBackgroundColor="@color/white"
    android:orientation="vertical"

    >



   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:paddingTop="@dimen/_5sdp"
       android:paddingBottom="@dimen/_5sdp"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/txt_mealtype_main_header"
           style="@style/TextStyle.CoolveticaRegular"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:visibility="gone"
           android:background="@color/line_grey_20"
           android:paddingTop="@dimen/_5sdp"
           android:paddingBottom="@dimen/_5sdp"
           android:paddingLeft="@dimen/_30sdp"
           android:layout_weight="1"
           android:text="Oats Idli"

           android:textColor="@color/colorPremiumBlack" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"

          >
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_gravity="center_vertical"
               android:layout_weight="0.5">
               <ImageView
                   android:id="@+id/imgAllMeal_item_image"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_30sdp"
                   android:padding="@dimen/_5sdp"
                   android:layout_margin="@dimen/_5sdp"
                   android:src="@drawable/food" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="2.2"
               android:orientation="horizontal"

               >


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:gravity="left|center"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:layout_gravity="center"
                   >

                   <TextView
                       android:id="@+id/textAllMealRowName"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="left|center"
                       android:text="Oats "
                       android:textSize="13dp"
                       android:maxLines="1"

                       android:singleLine="true"
                       android:textColor="@color/colorPremiumBlack"
                       android:textStyle="bold"
                       />

                   <TextView
                       android:id="@+id/textAllMealCalories"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"

                       android:text="1800 calories"
                       android:alpha="0.6"
                       android:textColor="@color/black"
                       android:textSize="13sp"
                       app:layout_constraintBottom_toBottomOf="@id/imgAllMeal_item_image"
                       app:layout_constraintLeft_toRightOf="@id/imgAllMeal_item_image"
                       app:layout_constraintStart_toEndOf="@+id/imgAllMeal_item_image" />
                   <TextView android:id="@+id/txt_mealtype_new"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Oats Idli"
                       android:visibility="visible"
                       android:textSize="13dp"

                       android:textColor="@color/gray"
                       android:textStyle="bold"
                       />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_weight="1.5"
                   android:gravity="left|center"
                   android:layout_gravity="center">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Qty "
                       android:visibility="gone"
                       android:textColor="@color/colorPremiumBlack"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintRight_toLeftOf="@id/textAllMealQty"
                       app:layout_constraintTop_toTopOf="parent" />
                   <TextView
                       android:id="@+id/textAllMealQty"
                       style="@style/TextStyle.CoolveticaRegular"
                       android:layout_width="40dp"
                       android:layout_height="25dp"
                       android:gravity="center"
                       android:singleLine="true"
                       android:maxLines="1"
                       android:visibility="gone"
                       android:background="@drawable/bg_edit_text_box_border"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/colorPremiumBlack"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />


                   <CheckedTextView
                       android:id="@+id/cancle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/ic_cancel"
                       android:layout_marginLeft="14dp"
                       android:visibility="gone"
                       android:textColor="@color/colorPremiumBlack"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintRight_toLeftOf="@id/textAllMealQty"
                       app:layout_constraintTop_toTopOf="parent" />
               </LinearLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="1.3"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/img_edit_repeat_meal"
                   android:background="@drawable/bg_pink_button"

                   android:layout_width="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:layout_marginEnd="@dimen/_3sdp"
                   android:textColor="#FFFFFF"
                   android:padding="3dp"

                   style="@style/TextStyle.mulishsemibold"
                   android:text="  Edit  "
                   android:gravity="center"
                   android:textSize="12dp"

                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/txt_select_repeat"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_3sdp"
                   android:textSize="12dp"

                   android:singleLine="true"
                   android:textColor="@color/black"
                   android:layout_marginStart="@dimen/_5sdp"

                   android:layout_gravity="center_vertical"
                   android:text="  ADD  "

                   />


           </LinearLayout>

       </LinearLayout>
   </LinearLayout>

</androidx.cardview.widget.CardView>
